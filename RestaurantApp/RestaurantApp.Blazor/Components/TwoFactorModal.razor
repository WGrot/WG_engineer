@if (IsVisible)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" data-testid="two-factor-modal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="Cancel" disabled="@IsLoading"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(WarningMessage))
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @WarningMessage
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(ErrorMessage))
                    {
                        <div class="alert alert-danger" data-testid="two-factor-error" role="alert">
                            @ErrorMessage
                        </div>
                    }

                    <p>@Description</p>

                    <EditForm Model="@this" OnValidSubmit="@Submit">
                        <div class="form-group">
                            <InputText @bind-Value="TwoFactorCode" data-testid="two-factor-code-input"
                                       class="form-control text-center fs-4 letter-spacing"
                                       placeholder="000000"
                                       maxlength="6"
                                       disabled="@IsLoading"
                                       @ref="codeInput" />
                        </div>
                    </EditForm>
                </div>
                <div class="modal-footer">
                    <button class="button button--grey" @onclick="Cancel" data-testid="two-factor-cancel" disabled="@IsLoading">
                        @CancelButtonText
                    </button>
                    <button class="button @SubmitButtonClass" data-testid="two-factor-submit" @onclick="Submit">
                        @if (IsLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>@LoadingText</span>
                        }
                        else
                        {
                            <span>@SubmitButtonText</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public string? ErrorMessage { get; set; }
    [Parameter] public string? WarningMessage { get; set; }
    [Parameter] public EventCallback<string> OnSubmit { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    
    [Parameter] public string Title { get; set; } = "Two factor authentication";
    [Parameter] public string Description { get; set; } = "Enter two factor authentication code";
    [Parameter] public string SubmitButtonText { get; set; } = "Verify";
    [Parameter] public string CancelButtonText { get; set; } = "Cancel";
    [Parameter] public string LoadingText { get; set; } = "Verifying...";
    [Parameter] public string SubmitButtonClass { get; set; } = "button--primary";

    private string TwoFactorCode { get; set; } = string.Empty;
    private InputText? codeInput;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (IsVisible && codeInput?.Element != null)
        {
            await codeInput.Element.Value.FocusAsync();
        }
    }

    private async Task Submit()
    {
        if (!string.IsNullOrEmpty(TwoFactorCode) && TwoFactorCode.Length == 6)
        {
            await OnSubmit.InvokeAsync(TwoFactorCode);
        }
    }

    private async Task Cancel()
    {
        TwoFactorCode = string.Empty;
        await OnCancel.InvokeAsync();
    }

    public void ClearCode()
    {
        TwoFactorCode = string.Empty;
        ErrorMessage = null;
    }
}

<style>
    .letter-spacing {
        letter-spacing: 0.5rem;
    }
</style>