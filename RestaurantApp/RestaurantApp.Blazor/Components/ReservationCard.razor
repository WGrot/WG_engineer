@using RestaurantApp.Blazor.Helpers
@using RestaurantApp.Shared.Models
<div class="card mb-3 reservation-card w-100 mx-auto">
    <div class="card-body" @onclick="() => OnClick.InvokeAsync(Reservation)">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <!-- Left section: restaurant and customer -->
            <div class="flex-grow-1" style="min-width: 0; max-width: 65%;">
                <div class="mb-1">
                    <div class="d-flex align-items-center mb-1">
                        <i class="bi bi-shop"></i>
                        <span class="text-truncate ms-1" style="max-width: 200px;"
                              title="@Reservation.Restaurant?.Name">
                            @Reservation.Restaurant?.Name
                        </span>
                        <span class="badge ms-2 @Reservation.Status.GetStatusBadgeClass()">
                            @Reservation.Status
                        </span>

                        @if (Reservation.Status == ReservationStatus.Pending)
                        {
                            <span class="badge ms-2 bg-success"
                                  @onclick:stopPropagation="true"
                                  @onclick="() => OnApprove.InvokeAsync((Reservation.Id, Reservation.RestaurantId))"
                                  style="background-color: #28a745; color: white; cursor: pointer;">
                                Approve
                            </span>
                        }
                    </div>

                    <div class="d-flex align-items-center text-muted small">
                        <i class="bi bi-person me-1"></i>@Reservation.CustomerName
                        <span class="ms-2">
                            <i class="bi bi-envelope"></i> @Reservation.CustomerEmail
                        </span>
                    </div>
                </div>

                <div class="small text-muted mt-2">
                    <div>
                        <i class="bi bi-calendar-event me-1 text-primary"></i>
                        @Reservation.ReservationDate.ToLocalTime().ToString("yyyy-MM-dd")
                    </div>
                    <div>
                        <i class="bi bi-clock me-1 text-primary"></i>
                        @Reservation.StartTime.ToString("HH:mm") - @Reservation.EndTime.ToString("HH:mm")
                    </div>
                    <div>
                        <i class="bi bi-people me-1 text-primary"></i>@Reservation.NumberOfGuests guests
                        @if (Reservation is TableReservation tableRes)
                        {
                            <span class="ms-2">
                                <i class="bi bi-hash text-primary"></i> Table @tableRes.Table.Capacity
                            </span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public ReservationBase Reservation { get; set; } = default!;
    [Parameter] public EventCallback<ReservationBase> OnClick { get; set; }
    [Parameter] public EventCallback<(int ReservationId, int RestaurantId)> OnApprove { get; set; }
}