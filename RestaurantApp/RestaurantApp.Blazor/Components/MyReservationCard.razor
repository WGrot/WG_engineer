@using RestaurantApp.Blazor.Helpers
@using RestaurantApp.Shared.DTOs.Reservation
@using RestaurantApp.Shared.Models
<div class="card mb-3 reservation-card w-100">
    <div class="card-body" @onclick="() => OnClick.InvokeAsync(Reservation)">
        <div class="d-flex justify-content-between align-items-center mb-2">

            <div class="flex-grow-1" style="min-width: 0; max-width: 65%;">
                <div class="mb-1">
                    <div class="d-flex align-items-center mb-1">
                        <i class="bi bi-shop"></i>
                        <span class="text-truncate ms-1" style="max-width: 200px;"
                              title="@Reservation.RestaurantName">
                            @Reservation.RestaurantName
                        </span>
                        <span class="badge ms-2 @Reservation.StatusEnumDto.GetStatusBadgeClass()">
                            @Reservation.StatusEnumDto
                        </span>
                    </div>

                    <div class="d-flex align-items-center text-muted small">
                        <i class="bi bi-person me-1"></i>@Reservation.CustomerName
                        <span class="ms-2">
                            <i class="bi bi-envelope"></i> @Reservation.CustomerEmail
                        </span>
                    </div>
                </div>

                <div class="small text-muted mt-2">
                    <div>
                        <i class="bi bi-calendar-event me-1 text-primary"></i>
                        @Reservation.ReservationDate.ToLocalTime().ToString("yyyy-MM-dd")
                    </div>
                    <div>
                        <i class="bi bi-clock me-1 text-primary"></i>
                        @Reservation.StartTime.ToString("HH:mm") - @Reservation.EndTime.ToString("HH:mm")
                    </div>
                    <div>
                        <i class="bi bi-people me-1 text-primary"></i>@Reservation.NumberOfGuests guests
                        @if (Reservation is TableReservationDto tableRes)
                        {
                            <span class="ms-2">
                                <i class="bi bi-hash text-primary"></i> Table @tableRes.Table.Capacity
                            </span>
                        }
                    </div>
                </div>
            </div>
            <div>
                @if (Reservation.StatusEnumDto == ReservationStatusEnumDto.Confirmed || Reservation.StatusEnumDto == ReservationStatusEnumDto.Pending)
                {
                    
                    <button class=" button button--red button--outline"
                            @onclick:stopPropagation="true"
                            @onclick="() => OnCancelled.InvokeAsync((Reservation.Id, Reservation.RestaurantId))">
                        Cancel
                    </button>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public ReservationDto Reservation { get; set; } = default!;
    [Parameter] public EventCallback<ReservationDto> OnClick { get; set; }
    [Parameter] public EventCallback<(int ReservationId, int RestaurantId)> OnCancelled { get; set; }
}