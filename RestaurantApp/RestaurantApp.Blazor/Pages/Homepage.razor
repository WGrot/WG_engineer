@page "/homepage"
@inject NavigationManager Navigation

<div class="homepage-container">
    <div class="hero-section">
        <div class="hero-background"></div>
        <div class="hero-content">
            <h1 class="hero-title">Book a table at your favorite restaurants</h1>

            <div class="search-container">
                <div class="search-box">
                    <div class="search-input-group">
                        <div class="search-icon">
                            <i class="bi bi-search"></i>
                        </div>
                        <input type="text"
                               class="search-input"
                               placeholder="Search for restaurants"
                               @bind="_searchQuery"
                               @bind:event="oninput"/>
                    </div>

                    <div class="divider"></div>

                    <div class="location-input-group">
                        <div class="location-icon">
                            <i class="bi bi-geo-alt"></i>
                        </div>
                        <input type="text"
                               class="location-input"
                               placeholder="Location"
                               @bind="_locationQuery"
                               @bind:event="oninput"/>
                    </div>

                    <button class="search-button" @onclick="SearchRestaurants">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="nearby-banner">
        <div class="nearby-content">
            <div class="nearby-text">
                <div class="nearby-icon-badge">
                    <i class="bi bi-geo-alt-fill"></i>
                </div>
                <h2 class="nearby-title">Discover restaurants near you</h2>
                <p class="nearby-description">
                    Find the best dining spots in your neighborhood.
                    Let us use your location to show you what's close by.
                </p>
                <button class="button button--primary button--lg p-2" @onclick="GoToRestaurantMap" disabled="@_isLoadingLocation">
                    @if (_isLoadingLocation)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        <span>Finding your location...</span>
                    }
                    else
                    {
                        <i class="bi bi-crosshair me-2"></i>
                        <span>Find nearby restaurants</span>
                    }
                </button>
            </div>
            <div class="nearby-illustration">
                <div class="illustration-circle">
                    <div class="illustration-inner">
                        <i class="bi bi-shop"></i>
                    </div>
                    <div class="floating-pin pin-1">
                        <i class="bi bi-geo-alt-fill"></i>
                    </div>
                    <div class="floating-pin pin-2">
                        <i class="bi bi-geo-alt-fill"></i>
                    </div>
                    <div class="floating-pin pin-3">
                        <i class="bi bi-geo-alt-fill"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="bg-white justify-content-center text-dark pt-5 pb-3 mt-5">
        <div class="container">
            <div class="row g-4 justify-content-evenly">

                <div class="col-lg-2 col-md-6">
                    <h6 class="fw-semibold text-dark mb-3">Navigation</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><a href="/homepage" class="text-secondary text-decoration-none small">Home</a></li>
                        <li class="mb-2"><a href="/restaurants" class="text-secondary text-decoration-none small">Restaurants</a></li>
                        <li class="mb-2"><a href="/Restaurant_Map" class="text-secondary text-decoration-none small">Map</a></li>
                        <li class="mb-2"><a href="/about" class="text-secondary text-decoration-none small">About Us</a></li>
                    </ul>
                </div>
                

                <div class="col-lg-2 col-md-6">
                    <h6 class="fw-semibold text-dark mb-3">Are you a restaurant owner?</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2"><a href="/CreateRestaurant" class="text-primary text-decoration-none small">Create Restaurant Page!</a></li>
                        <li class="mb-2"><a href="/faq" class="text-secondary text-decoration-none small">FAQ</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6">
                    <h6 class="fw-semibold text-dark mb-3">Contact</h6>
                    <ul class="list-unstyled mb-0 small text-secondary">
                        <li class="mb-2">
                            <i class="bi bi-envelope me-2"></i>noreply.dineops@gmail.com
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-telephone me-2"></i>+48 123 456 789
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-geo-alt me-2"></i>Warsaw, Poland
                        </li>
                    </ul>
                </div>

            </div>

            <hr class="my-4 border-secondary">

            <div class="text-center">
                <p class="text-secondary small mb-0">&copy; @DateTime.Now.Year DineOps. All rights reserved.</p>
            </div>
        </div>
    </footer>

</div>


@code {
    private string _searchQuery = "";
    private string _locationQuery = "";
    private bool _isLoadingLocation = false;

    private Task SearchRestaurants()
    {
        var queryParams = new List<string>();

        if (!string.IsNullOrWhiteSpace(_searchQuery))
        {
            queryParams.Add($"name={Uri.EscapeDataString(_searchQuery)}");
        }

        if (!string.IsNullOrWhiteSpace(_locationQuery))
        {
            queryParams.Add($"location={Uri.EscapeDataString(_locationQuery)}");
        }

        var queryString = queryParams.Any() ? "?" + string.Join("&", queryParams) : "";

        Navigation.NavigateTo($"/restaurants{queryString}");
        return Task.CompletedTask;
    }

    private void GoToRestaurantMap()
    {
        Navigation.NavigateTo($"/Restaurant_Map");
    }

}