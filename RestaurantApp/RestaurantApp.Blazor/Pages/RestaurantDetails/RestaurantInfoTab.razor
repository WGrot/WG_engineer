@using RestaurantApp.Blazor.Components

@if (Restaurant != null)
{
    <div class="container my-4">
        <div class="row g-3">
            <div class="col">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Restaurant.Address))
                        {
                            <h5 class="card-title mb-3">
                                <i class="bi bi-geo-alt-fill text-secondary"></i> Address
                            </h5>
                            <p class="card-text">
                                <i class="bi bi-pin-map"></i> @Restaurant.Address
                            </p>
                        }

                        @if (!string.IsNullOrEmpty(Restaurant.Description))
                        {
                            <h5 class="card-title mb-3">
                                <i class="bi bi-info-circle-fill text-secondary"></i> About
                            </h5>
                            <p class="card-text">@Restaurant.Description</p>
                        }

                        @if (Restaurant.OpeningHours != null && Restaurant.OpeningHours.Any())
                        {
                            <h5 class="card-title mb-3">
                                <i class="bi bi-clock-fill text-secondary"></i> Opening Hours
                            </h5>
                            <div class="d-flex flex-column gap-2">
                                @foreach (var day in Enum.GetValues<DayOfWeek>())
                                {
                                    var hours = Restaurant.OpeningHours.FirstOrDefault(h => h.DayOfWeek == day);
                                    <div class="border rounded p-3 bg-light">
                                        <div class="row align-items-center">
                                            <div class="col-6 col-md-4">
                                                <strong>@day</strong>
                                            </div>
                                            <div class="col-6 col-md-8">
                                                @if (hours == null || hours.IsClosed)
                                                {
                                                    <span class="badge bg-secondary py-2 px-3">Closed</span>
                                                }
                                                else
                                                {
                                                    <span class="text-success fw-semibold">
                                <i class="bi bi-clock me-1"></i>
                                                        @hours.OpenTime.ToString("HH:mm") — @hours.CloseTime.ToString("HH:mm")
                            </span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            @if (Restaurant.Location != null)
            {
                <div class="col-12 col-lg-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title mb-3">
                                <i class="bi bi-map-fill text-secondary"></i> Location
                            </h5>
                            <div style="height: 400px; width: 100%;">
                                <RealTimeMap @ref="_realTimeMap"
                                             height="540px"
                                             width="100%"
                                             Parameters="@_mapParameters"
                                             OnAfterMapLoaded="@OnMapLoaded">
                                </RealTimeMap>
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (Restaurant.GalleryImages != null && Restaurant.GalleryImages.Any())
            {
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title mb-3">
                                <i class="bi bi-images"></i> Photos
                            </h5>
                            <div class="d-flex flex-wrap gap-2">
                                @foreach (var imageLink in Restaurant.GalleryImages)
                                {
                                    <img src="@imageLink.ThumbnailUrl"
                                         class="rounded shadow-sm"
                                         alt="Restaurant photo"
                                         style="cursor: pointer; object-fit: cover; height: 120px; width: 120px;"
                                         @onclick="() => OpenPhotoModal(imageLink.Id)">
                                }
                                
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <GenericModal @bind-IsVisible="_showPhotoModal"
                  Size="GenericModal.ModalSize.Large">
        <ChildContent>
            @if (_selectedPhotoUrl != null)
            {
                <div class="d-flex justify-content-center align-items-center"
                     style="height: 70vh; max-height: 600px; min-height: 400px;">
                    <img src="@_selectedPhotoUrl"
                         style="width: 100%; 
                            height: 100%; 
                            object-fit: contain;"
                         class="rounded shadow-sm"
                         alt="Restaurant photo">
                </div>
            }
        </ChildContent>
        <FooterContent>
            <div class="d-flex justify-content-between w-100">
                <button class="button button--primary"
                        disabled="@(_selectedPhotoIndex < 1)"
                        @onclick="() => ShowNextPhotoModal(_selectedPhotoIndex - 1)">
                    Previous
                </button>

                <button class="button button--primary"
                        disabled="@(_selectedPhotoIndex >= Restaurant.GalleryImages!.Count - 1)"
                        @onclick="() => ShowNextPhotoModal(_selectedPhotoIndex + 1)">
                    Next
                </button>
            </div>
        </FooterContent>
    </GenericModal>
}
else
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3 text-muted">Loading restaurant data...</p>
    </div>
}