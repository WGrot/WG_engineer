@using RestaurantApp.Blazor.Components

@if (Menu != null)
{
    <div class="menu-container">
        <h3 class="mb-4 my-3 w-100 text-center">Menu</h3>
        @foreach (var category in Menu.Categories.OrderBy(c => c.DisplayOrder))
        {
            var isExpanded = _expandedCategories.Contains(category.Id);

            <div class="card shadow-sm mb-3 border-0 rounded-3">
                <div
                    class="card-header bg-light d-flex justify-content-between align-items-center rounded-top-3"
                    style="cursor: pointer;"
                    @onclick="() => ToggleCategory(category.Id)">
                    <div>
                        <strong class="text-capitalize">@category.Name</strong>
                        @if (!string.IsNullOrEmpty(category.Description))
                        {
                            <div class="small text-muted">@category.Description</div>
                        }
                    </div>
                    <i class="bi @(isExpanded ? "bi-chevron-up" : "bi-chevron-down") fs-5"></i>
                </div>

                <div class="collapse @(isExpanded ? "show" : "")">
                    <div class="card-body bg-white">
                        @foreach (var item in category.Items)
                        {
                            <MenuItemComponent Item="item"
                                               OnItemClick="HandleMenuItemClick"/>
                        }
                    </div>
                </div>
            </div>
        }

        @if (Menu.Items?.Any() == true)
        {
            <div class="card shadow-sm mb-3 border-0 rounded-3">
                <div
                    class="card-header bg-light d-flex justify-content-between align-items-center rounded-top-3"
                    style="cursor: pointer;"
                    @onclick="ToggleUncategorized">
                    <div>
                        <strong>Uncategorized Items</strong>
                    </div>
                    <i class="bi @(_showUncategorized ? "bi-chevron-up" : "bi-chevron-down") fs-5"></i>
                </div>

                <div class="collapse @(_showUncategorized ? "show" : "")">
                    <div class="card-body bg-white">
                        @foreach (var item in _uncategorizedItems)
                        {
                            <MenuItemComponent Item="item"
                                               OnItemClick="HandleMenuItemClick"/>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
    
    @if(_showItemDetailsModal)
    {
        <div>
            <MenuItemDetailsModal
                @bind-IsVisible="_showItemDetailsModal"
                Item="_selectedMenuItem"/>
        </div> 
    }

    
}
else if(_isLoading)
{
    <LoadingSpinner Title="Loading restaurant menu..."></LoadingSpinner>
}
else
{
    <div><h3 class="mb-4 my-3 w-100 text-center">This restaurant doesn't have menu configured</h3></div>
}
