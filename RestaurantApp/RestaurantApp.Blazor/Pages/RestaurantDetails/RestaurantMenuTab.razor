@using RestaurantApp.Shared.Models

<h3 class="mb-4">Menu</h3>

@if (menu != null)
{
    <div class="menu-container">
        @foreach (var category in menu.Categories.OrderBy(c => c.DisplayOrder))
        {
            var isExpanded = expandedCategories.Contains(category.Id);

            <div class="card shadow-sm mb-3 border-0 rounded-3">
                <div
                    class="card-header bg-light d-flex justify-content-between align-items-center rounded-top-3"
                    style="cursor: pointer;"
                    @onclick="() => ToggleCategory(category.Id)">
                    <div>
                        <strong class="text-capitalize">@category.Name</strong>
                        @if (!string.IsNullOrEmpty(category.Description))
                        {
                            <div class="small text-muted">@category.Description</div>
                        }
                    </div>
                    <i class="bi @(isExpanded ? "bi-chevron-up" : "bi-chevron-down") fs-5"></i>
                </div>

                <div class="collapse @(isExpanded ? "show" : "")">
                    <div class="card-body bg-white">
                        @foreach (var item in categoryItems.GetValueOrDefault(category.Id, new List<MenuItem>()))
                        {
                            <MenuItemComponent Item="item"/>
                        }
                    </div>
                </div>
            </div>
        }
        
        @if (uncategorizedItems.Any())
        {
            <div class="card shadow-sm mb-3 border-0 rounded-3">
                <div
                    class="card-header bg-light d-flex justify-content-between align-items-center rounded-top-3"
                    style="cursor: pointer;"
                    @onclick="ToggleUncategorized">
                    <div>
                        <strong>Uncategorized Items</strong>
                    </div>
                    <i class="bi @(showUncategorized ? "bi-chevron-up" : "bi-chevron-down") fs-5"></i>
                </div>

                <div class="collapse @(showUncategorized ? "show" : "")">
                    <div class="card-body bg-white">
                        @foreach (var item in uncategorizedItems)
                        {
                            <MenuItemComponent Item="item"/>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-muted">Loading menu data...</div>
}
