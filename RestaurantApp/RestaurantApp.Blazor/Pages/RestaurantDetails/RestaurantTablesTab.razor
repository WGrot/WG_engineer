@using RestaurantApp.Blazor.Components
<h3 class="mb-4">Tables</h3>

<div class="container-fluid">
    @if (loadedTables != null && loadedTables.Any())
    {
        <div class="row g-3">
            @foreach (var table in loadedTables)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <TableComponent Table="table" />
                </div>
            }
        </div>
        

    }
    else
    {
        <div class="text-center text-muted py-5">
            <i class="bi bi-table fs-1 d-block mb-2"></i>
            <p class="mb-0">No tables configured — please add some.</p>
        </div>
    }
</div>

<div style="width: 100%;">
    <AvailabilityMap Availability="@availabilityMap" StartTime="@DateTime.Today" />
</div>
