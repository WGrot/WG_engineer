@using Microsoft.AspNetCore.Components.Authorization
@using RestaurantApp.Blazor.Components


<div class="container-fluid px-0">
    @if (!string.IsNullOrEmpty(errorInfo))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @errorInfo
            <button type="button" class="btn-close" @onclick="() => errorInfo = string.Empty"></button>
        </div>
    }

    @if (!String.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = String.Empty"></button>
        </div>
    }

    <AuthorizeView>
        <Authorized>
            @if (existingUserReview != null)
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-primary text-white"
                         @onclick="() => isEditReviewExpanded = !isEditReviewExpanded"
                         style="cursor: pointer;">
                        <h5 class="mb-0 d-flex justify-content-between align-items-center">
                        <span>
                            <i class="bi bi-pencil-square me-2"></i>Your Review
                        </span>
                            <i class="bi bi-chevron-@(isEditReviewExpanded ? "up" : "down")"></i>
                        </h5>
                    </div>
                    @if (isEditReviewExpanded)
                    {
                        <div class="card-body">
                            <form @onsubmit:preventDefault="true">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Your Rating</label>
                                    <div class="star-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            var starValue = i;
                                            <span class="star @(starValue <= existingUserReview.Rating ? "filled" : "")"
                                                  @onclick="() => SetRatingForEditing(starValue)"
                                                  style="cursor: pointer; font-size: 2rem; color: @(starValue <= existingUserReview.Rating ? "#4c63d2" : "#dee2e6")">
                                            <i class="bi @(starValue <= existingUserReview.Rating ? "bi-star-fill" : "bi-star")"></i>
                                        </span>
                                        }
                                        <span class="ms-2 text-muted">(@existingUserReview.Rating / 5.0)</span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="reviewContent" class="form-label fw-bold">Your Review</label>
                                    <textarea class="form-control"
                                              id="reviewContent"
                                              rows="4"
                                              @bind="existingUserReview.Content"
                                              placeholder="Share your experience at this restaurant..."
                                              maxlength="1000"></textarea>
                                    <small class="text-muted">@(existingUserReview.Content?.Length ?? 0) / 1000
                                        characters</small>
                                </div>

                                <div class="d-flex gap-2">
                                    <button type="button"
                                            class="base-button"
                                            @onclick="UpdateReview"
                                            disabled="@(isSubmitting || IsDeletting)">
                                        @if (isSubmitting)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                            <span>Updating...</span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-arrow-up-right me-2"></i>
                                            <span>Update Review</span>
                                        }
                                    </button>
                                    <button type="button"
                                            class="base-button"
                                            @onclick="()=>DeleteMyReview(existingUserReview.Id)"
                                            disabled="@(isSubmitting || IsDeletting)">
                                        @if (IsDeletting)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                            <span>Deleting...</span>
                                        }
                                        else
                                        {
                                            <i class="bi bi-trash me-2"></i>
                                            <span>Delete Review</span>
                                        }
                                    </button>
                                </div>
                            </form>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-primary text-white"
                         @onclick="() => isAddReviewExpanded = !isAddReviewExpanded"
                         style="cursor: pointer;">
                        <h5 class="mb-0 d-flex justify-content-between align-items-center">
                        <span>
                            <i class="bi bi-pencil-square me-2"></i>Write a Review
                        </span>
                            <i class="bi bi-chevron-@(isAddReviewExpanded ? "up" : "down")"></i>
                        </h5>
                    </div>
                    @if (isAddReviewExpanded)
                    {
                        <div class="card-body">
                            <form @onsubmit:preventDefault="true">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Your Rating</label>
                                    <div class="star-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            var starValue = i;
                                            <span class="star @(starValue <= newReview.Rating ? "filled" : "")"
                                                  @onclick="() => SetRatingForCreating(starValue)"
                                                  style="cursor: pointer; font-size: 2rem; color: @(starValue <= newReview.Rating ? "#4c63d2" : "#dee2e6")">
                                            <i class="bi @(starValue <= newReview.Rating ? "bi-star-fill" : "bi-star")"></i>
                                        </span>
                                        }
                                        <span class="ms-2 text-muted">(@newReview.Rating / 5.0)</span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="reviewContent" class="form-label fw-bold">Your Review</label>
                                    <textarea class="form-control"
                                              id="reviewContent"
                                              rows="4"
                                              @bind="newReview.Content"
                                              placeholder="Share your experience at this restaurant..."
                                              maxlength="1000"></textarea>
                                    <small class="text-muted">@(newReview.Content?.Length ?? 0) / 1000
                                        characters</small>
                                </div>

                                <button type="button"
                                        class="base-button"
                                        @onclick="CreateReview"
                                        disabled="@(isSubmitting)">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        <span>Posting...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-send-fill me-2"></i>
                                        <span>Post Review</span>
                                    }
                                </button>
                            </form>
                        </div>
                    }
                </div>
            }
        </Authorized>
    </AuthorizeView>

    <!-- Reviews List -->
    <div class="reviews-section">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">
                <i class="bi bi-chat-dots me-2"></i>
                Customer Reviews
                @if (!isInitialLoading && totalReviewCount > 0)
                {
                    <span class="badge bg-secondary ms-2">@totalReviewCount</span>
                }
            </h4>
            @if (!isInitialLoading && displayedReviews.Any())
            {
                <div class="d-flex gap-3 align-items-center">
                    <SetPageSizeComponent title="Reviews per page"
                                          OnPageSizeChanged="SetPageSize"></SetPageSizeComponent>
                    <SortDropdown Options="SortOptions"
                                  SelectedValue="@sortBy"
                                  OnSortChanged="@SortReviews"></SortDropdown>
                </div>
            }
        </div>

        @if (isInitialLoading)
        {
            <div class="text-center py-4">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading reviews...</span>
                </div>
            </div>
        }
        else if (displayedReviews.Any())
        {
            <!-- Statistics Card -->
            <div class="card mb-4 bg-light">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-4 text-center">
                            <h2 class="mb-0">@restaurant.AverageRating.ToString("F1")</h2>
                            <div class="mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi @(i <= Math.Round(restaurant.AverageRating) ? "bi-star-fill" : "bi-star") text-warning"></i>
                                }
                            </div>
                            <small class="text-muted">Based on @totalReviewCount review(s)</small>
                        </div>
                        <div class="col-md-8">
                            @foreach (var rating in ratingDistribution.OrderByDescending(x => x.Key))
                            {
                                <div class="d-flex align-items-center mb-1">
                                    <span class="me-2">@rating.Key <i
                                            class="bi bi-star-fill text-warning small"></i></span>
                                    <div class="progress flex-grow-1" style="height: 8px;">
                                        <div class="progress-bar bg-warning"
                                             style="width: @((totalReviewCount > 0 ? (rating.Value * 100 / totalReviewCount) : 0))%"></div>
                                    </div>
                                    <span class="ms-2 small text-muted">@rating.Value</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reviews List -->
            foreach (var review in displayedReviews)
            {
                <ReviewCard review="review">
                    <Title><i class="bi bi-person-circle"></i> @review.UserName</Title>
                </ReviewCard>
            }

            <!-- Load More Button -->
            @if (hasMoreReviews)
            {
                <div class="text-center mt-3">
                    <button class="btn btn-outline-primary"
                            @onclick="LoadMoreReviews"
                            disabled="@isLoadingMore">
                        @if (isLoadingMore)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            <span>Loading...</span>
                        }
                        else
                        {
                            <i class="bi bi-arrow-down-circle me-2"></i>
                            <span>Load More Reviews</span>
                        }
                    </button>
                </div>
            }
            else if (displayedReviews.Count == totalReviewCount && totalReviewCount > pageSize)
            {
                <div class="text-center mt-3 text-muted">
                    <i class="bi bi-check-circle me-2"></i>
                    All reviews loaded
                </div>
            }
        }
        else
        {
            <div class="alert alert-info" role="alert">
                <i class="bi bi-info-circle me-2"></i>
                This restaurant doesn't have any reviews yet. Be the first to share your experience!
            </div>
        }
    </div>
</div>

<style>
    .review-card {
        transition: all 0.3s ease;
        border-left: 4px solid transparent;
    }

    .review-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .15) !important;
        border-left-color: var(--primary-color);
    }

    .star-rating {
        display: inline-block;
    }

    .star {
        transition: all 0.2s ease;
    }

    .star:hover {
        transform: scale(1.2);
    }

    .progress {
        background-color: #e9ecef;
    }

    .base-button:disabled {
        opacity: 0.65;
        cursor: not-allowed;
    }
</style>