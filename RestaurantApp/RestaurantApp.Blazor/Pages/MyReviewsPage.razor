@page "/my-reviews"
@using RestaurantApp.Blazor.Services
@using RestaurantApp.Blazor.Components
<h3 class="mb-4">
    <i class="bi bi-chat-left-text me-2"></i>My Reviews
</h3>

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading reviews...</span>
        </div>
    </div>
}
else if (!reviews.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        You haven't written any reviews yet. Visit a restaurant and share your experience!
    </div>
}
else
{
    @foreach (var review in reviews)
    {
        <div class="card mb-3 review-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    <!-- Left section - restaurant name and rating -->
                    <div class="flex-grow-1" style="min-width: 0; max-width: 60%;">
                        <h5 class="mb-1 d-flex align-items-center">
                            <i class="bi bi-house-door"></i>
                            <span class="text-truncate m-lg-1" style="max-width: 200px;" title="@review.RestaurantName">
                                @review.RestaurantName
                            </span>
                            @if (review.IsVerified)
                            {
                                <span class="badge bg-success ms-2 flex-shrink-0" title="Verified Review">
                                    <i class="bi bi-check-circle"></i> Verified
                                </span>
                            }
                        </h5>
                        <div class="mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="bi @(i <= review.Rating ? "bi-star-fill" : "bi-star") text-warning"></i>
                            }
                            <span class="ms-2 text-muted small">@review.Rating.0 / 5.0</span>
                        </div>
                    </div>

                    <!-- Right section - date and actions -->
                    <div class="text-muted small d-flex align-items-center gap-2 flex-shrink-0 ms-3">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-calendar3 me-1"></i>
                            <span class="text-nowrap">@review.CreatedAt.ToString("MMM dd, yyyy")</span>
                            @if (review.UpdatedAt.HasValue)
                            {
                                <span class="badge bg-secondary ms-1">Edited</span>
                            }
                        </div>

                        @if (review.UserId == loggedUserId)
                        {
                            <div class="dropdown">
                                <button class="btn btn-sm" type="button" data-bs-toggle="dropdown"
                                        aria-expanded="false">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" href="#" @onclick:preventDefault="true"
                                           @onclick="() => OpenEditModal(review)">
                                            <i class="bi bi-pencil me-2"></i>Edit
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-danger" href="#" @onclick:preventDefault="true"
                                           @onclick="() => DeleteMyReview(review.Id)">
                                            <i class="bi bi-trash me-2"></i>Delete
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
                <p class="card-text">@review.Content</p>
            </div>
        </div>
    }
}

<!-- Edit Review Modal -->
<EditReviewModal
    @bind-IsVisible="showEditModal"
    Review="selectedReview"
    OnUpdate="UpdateReview"
    OnDelete="DeleteReviewFromModal"
    OnClose="CloseEditModal" />

<style>
    .review-card {
        transition: box-shadow 0.3s ease;
    }

    .review-card:hover {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .dropdown-menu {
        min-width: 120px;
    }

    .dropdown-item:hover {
        background-color: #f8f9fa;
    }

    .dropdown-item.text-danger:hover {
        background-color: #fff5f5;
    }
</style>