@using RestaurantApp.Blazor.Components
<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-1 fw-bold">
            Tables availability
        </h5>
    </div>
    <div class="card-body shadow border-1">

        @if (_isLoading)
        {
            <div class="loading-container">
                <div class="spinner"></div>
                <p>Loading...</p>
            </div>
        }
        else
        {
            if (_tables.Any())
            {
                <div class="row g-3">

                    @foreach (var table in _tables)
                    {
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3" @onclick="() => ShowTableDetails(table)">
                            <TableComponentBlazor
                                Table="table"
                                RegisterComponent="RegisterTableComponent"
                                OnAvailabilityChanged="HandleAvailabilityChanged"/>
                        </div>
                    }
                </div>


                <TableDetailsModal
                    @bind-IsVisible="_showTableDetails"
                    RestaurantId="RestaurantId"
                    Table="_selectedTable"
                    AutoFillUserData="false"/>
            }
            else
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-table fs-1 d-block mb-2"></i>
                    <p class="mb-0">No tables configured — please add some.</p>
                </div>
            }
        }

    </div>
</div>
