@page "/RestaurantDashboard"

@if (isLoading)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Loading...</p>
    </div>
}
else
{
    <div class="container mt-4">
    <div class="row g-3 mb-3">
        <!-- Lewa karta: wybrana restauracja -->
        <div class="col-md-3">
            <div class="card restaurant-dropdown shadow border-1 h-100">

                <div class="card-body p-4 d-flex flex-column justify-content-center">
                    <small class="text-uppercase mb-2">Chosen restaurant</small>

                    <div class="d-flex align-items-center gap-2">
                        <h4 class="fw-bold mb-0">@loadedRestaurant.Name</h4>
                        <button class="btn btn-link btn-sm p-0 text-white text-decoration-none">
                            <i class="bi bi-chevron-down fs-5"></i>
                        </button>
                    </div>

                </div>

            </div>
        </div>

        <!-- Prawa karta: data i godzina -->
        <div class="col-md-9">
            <div class="card shadow border-1 h-100">
                <div class="card-body p-4 d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-1 fw-bold">@currentDate.ToString("dddd, dd MMMM yyyy")</h4>
                        <p class="text-muted mb-0">
                            <i class="bi bi-clock me-1"></i>
                            @currentDate.ToString("HH:mm:ss")
                        </p>
                    </div>
                    <div>
                        <button class="base-button lg">
                            <i class="bi bi-plus-circle me-2"></i>
                            New Reservation
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-3">
            <div class="card shadow border-1 h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="card-body">
                        <h6 class="text-uppercase text-muted mb-2">Today reservations</h6>
                        <h2 class="fw-bold mb-1">47</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow border-1 h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="card-body">
                        <h6 class="text-uppercase text-muted mb-2">Available Tables</h6>
                        <h2 class="fw-bold mb-1">12/30</h2>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow border-1 h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="card-body">
                        <h6 class="text-uppercase text-muted mb-2">Available Seats</h6>
                        <h2 class="fw-bold mb-1">50</h2>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow border-1 h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div class="card-body">
                        <h6 class="text-uppercase text-muted mb-2">Today reservations</h6>
                        <h2 class="fw-bold mb-1">47</h2>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

}



