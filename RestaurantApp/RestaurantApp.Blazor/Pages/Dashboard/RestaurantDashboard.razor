@page "/RestaurantDashboard"
@using RestaurantApp.Blazor.Components
@using RestaurantApp.Blazor.Pages.ManageReservationsPage
@using RestaurantApp.Shared.DTOs.SearchParameters
@using RestaurantApp.Shared.Models

@if (isLoading)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Loading...</p>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="row g-3 mb-3">
            <div class="col-md-3">
                <div class="card restaurant-dropdown shadow border-1 h-100">

                    <div class="card-body p-4 d-flex flex-column justify-content-center">
                        <small class="text-uppercase mb-2">Chosen restaurant</small>

                        <div class="d-flex align-items-center gap-2" title="Change restaurant">
                            <h4 class="fw-bold mb-0">@loadedRestaurant.Name</h4>

                            @if (userRestaurantNames.Count > 1)
                            {
                                <div class="dropdown">
                                    <button class="btn btn-link btn-sm p-0 text-white"
                                            type="button"
                                            data-bs-toggle="dropdown">
                                        <i class="bi bi-chevron-down fs-5"></i>
                                    </button>

                                    <ul class="dropdown-menu dropdown-menu-dark">
                                        @foreach (var item in userRestaurantNames)
                                        {
                                            <li>
                                                <button class="dropdown-item"
                                                        @onclick="() => SwitchActiveRestaurant(item.Id)">
                                                    @item.Name
                                                </button>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>

                    </div>

                </div>
            </div>
            <div class="col-md-9">
                <div class="card shadow border-1 h-100">
                    <div class="card-body p-4 d-flex justify-content-between align-items-center">
                        <Clock></Clock>
                        <div>
                            <button class="base-button lg" @onclick="() => showReservationModal = true">
                                <i class="bi bi-plus-circle me-2"></i>
                                New Reservation
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-3">
                <div class="card shadow border-1 h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div class="card-body">
                            <h6 class="text-uppercase text-muted mb-2">Today reservations</h6>
                            <h2 class="fw-bold mb-1">
                                @if (dto.TodayReservations != null)
                                {
                                    <div>@dto.TodayReservations</div>
                                }
                                else
                                {
                                    <div>no data</div>
                                }
                            </h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow border-1 h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div class="card-body">
                            <h6 class="text-uppercase text-muted mb-2">Available Tables</h6>
                            <h2 class="fw-bold mb-1">@availableTables</h2>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow border-1 h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div class="card-body">
                            <h6 class="text-uppercase text-muted mb-2">Available Seats</h6>
                            <h2 class="fw-bold mb-1">@freeSeats</h2>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card shadow border-1 h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div class="card-body">
                            <h6 class="text-uppercase text-muted mb-2">Reservations in last week</h6>
                            <h2 class="fw-bold mb-1">
                                @if (dto.ReservationsLastWeek != null)
                                {
                                    <div>@dto.ReservationsLastWeek</div>
                                }
                                else
                                {
                                    <div>no data</div>
                                }
                            </h2>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row g-3 mb-3 d-flex align-items-stretch">
            <div class="col-6 d-flex">
                <div class="card shadow border-1 flex-fill">
                    <NextReservationsView RestaurantId="@loadedRestaurant.Id"/>
                </div>
            </div>

            <div class="col-6 d-flex">
                <div class="card shadow border-1 flex-fill">
                    <NextReservationsView
                        RestaurantId="@loadedRestaurant.Id"
                        Title="Pending Reservations"
                        GetPendingReservations="true"/>
                </div>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-12">
                @if (!isLoading && loadedRestaurant != null)
                {
                    <AvailableTablesView
                        RestaurantId="@loadedRestaurant.Id"
                        OnAvailabilitySummaryChanged="HandleAvailabilitySummaryChanged"/>
                }
            </div>
        </div>
    </div>

    <GenericModal Title="New reservation"
                  @bind-IsVisible="showReservationModal"
                  Size="@GenericModal.ModalSize.Large"
    >
        <ChildContent>
            <TableBookingForm AutoFillData="false" Id="@loadedRestaurant.Id" Restaurant="@loadedRestaurant" OnReservationCreated="() => showReservationModal = false"/>
        </ChildContent>
        
    </GenericModal>
}



