
<div class="card shadow-sm border-0 rounded-3 table-card h-100">
    <div class="card-header @HeaderClass d-flex justify-content-between align-items-center rounded-top-3">
        <strong>Table @Table.TableNumber</strong>
        @if (isAvailable)
        {
            <strong>Available</strong>
        }
        else
        {
            <strong>Taken</strong>
        }
    </div>

    <div class="card-body py-3">
        <div class="d-flex justify-content-start mb-2">
            <span class="text-muted me-1">Seats</span>
            <span class="fw-semibold">@Table.Capacity
                <i class="bi bi-people-fill text-secondary"></i>
            </span>
        </div>

        @if (!string.IsNullOrEmpty(Table.Location))
        {
            <div class="d-flex justify-content-start mb-2">
                <span class="text-muted me-1">Location</span>
                <span class="fw-semibold">@Table.Location</span>
            </div>
        }

        <div class="d-flex justify-content-center">
            <span>Availability today</span>
        </div>
        <div class="color-bar-flex">

            @foreach (var segment in Segments)
            {
                <div class="@(segment.value == '0' ? "segment-zero" : "segment-one")"
                     style="flex-grow: @segment.count"></div>
            }

        </div>

    </div>

</div>


<style>
    .table-card {
        transition: transform 0.15s ease, box-shadow 0.15s ease;
    }

    .table-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.08);
        cursor: pointer;
    }

    .table-card .card-header {
        font-size: 1.05rem;
    }

    .table-card .card-body span {
        font-size: 0.95rem;
    }
    

    .color-bar-flex {
        display: flex;
        height: 15px;
        width: 100%;
        border: 2px solid #ffffff;
    }

</style>