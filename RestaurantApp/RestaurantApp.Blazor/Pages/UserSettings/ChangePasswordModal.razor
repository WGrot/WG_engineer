@using RestaurantApp.Blazor.Models
@using RestaurantApp.Blazor.Models.DTO
@using RestaurantApp.Blazor.Services
@using RestaurantApp.Shared.DTOs.Auth


@inject HttpClient Http
@inject MessageService MessageService
@inject AuthService AuthService
@if (IsVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Change your password</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">

                    <EditForm Model="_model" OnValidSubmit="Submit">


                        <div class="mb-3">
                            <label>Current password</label>
                            <InputText class="form-control" @bind-Value="_model.CurrentPassword" />
                            <ValidationMessage For="@(() => _model.CurrentPassword)" />
                        </div>

                        <div class="mb-3">
                            <label>New password</label>
                            <InputText class="form-control" @bind-Value="_model.NewPassword" />
                            <ValidationMessage For="@(() => _model.NewPassword)" />
                        </div>

                        <div class="mb-3">
                            <label>Repeat new password</label>
                            <InputText class="form-control" @bind-Value="_model.RepeatNewPassword" />
                            <ValidationMessage For="@(() => _model.RepeatNewPassword)" />
                        </div>
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                    </EditForm>
                </div>
                <div class="modal-footer">
                    <div class="d-flex">
                        <button type="button" class="button button--primary btn-primary" @onclick="Submit" disabled="@_isSaving">
                            @if (_isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Saving...</span>
                            }
                            else
                            {
                                <span>Save</span>
                            }
                        </button>
                        <button type="button" class="button button--grey" @onclick="Close">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public EventCallback<CreateUserResponse> OnPasswordChanged { get; set; }
    private ChangePasswordModel _model = new();
    
    private bool _isSaving = false;
    private string _currentPassword = "";
    private string _repeatNewPassword = "";
    private string _newPassword = "";

    private async Task Close()
    {
        ClearForm();
        await IsVisibleChanged.InvokeAsync(false);
    }

    private void ClearForm()
    {
        _currentPassword = "";
        _repeatNewPassword = "";
        _newPassword = "";
        _isSaving = false;
    }

    private async Task Submit()
    {
        var result = await Http.PostAsJsonAsync("api/Password/change-password", new ChangePasswordRequest
        {
            CurrentPassword = _model.CurrentPassword,
            NewPassword = _model.NewPassword,
        });

        if (result.IsSuccessStatusCode)
        {
            
            MessageService.AddSuccess("Success","Your password has been changed successfully. Please log in again with your new password.");
            await AuthService.LogoutAsync();
        }
        else
        {
            MessageService.AddError("Error", "Error occured when changing password. Please try again.");
        }
    }

    
}