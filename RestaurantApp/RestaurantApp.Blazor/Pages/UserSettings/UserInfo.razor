@using RestaurantApp.Blazor.Extensions
@using RestaurantApp.Shared.DTOs.Users
@using RestaurantApp.Blazor.Components
@using RestaurantApp.Blazor.Services
@using RestaurantApp.Shared.Common
@using RestaurantApp.Shared.Models
@inject HttpClient Http
@inject MessageService MessageService

@if (user != null)
{
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-person me-2"></i>User Information
                    </h5>
                    @if (!isEditing)
                    {
                        <button class="button button--white button--outline" @onclick="StartEditing">
                            <i class="bi bi-pencil me-1"></i>Edit
                        </button>
                    }
                </div>
                
                <div class="card-body">
                    <p class="text-muted mb-4">Change basic info regarding your account</p>

                    <div class="row">
                        <div class="col-sm-12 col-md-6 mb-3">
                            <label class="form-label">
                                First Name <span class="text-danger">*</span>
                            </label>
                            @if (isEditing)
                            {
                                <input type="text"
                                       class="form-control"
                                       @bind="modifiedUser.FirstName"
                                       @bind:event="oninput"
                                       required/>
                            }
                            else
                            {
                                <p class="form-control-plaintext">@modifiedUser.FirstName</p>
                            }
                        </div>
                        <div class="col-md-6 col-sm-12 mb-3">
                            <label class="form-label">
                                Last Name <span class="text-danger">*</span>
                            </label>
                            @if (isEditing)
                            {
                                <input type="text"
                                       class="form-control"
                                       @bind="modifiedUser.LastName"
                                       @bind:event="oninput"
                                       required/>
                            }
                            else
                            {
                                <p class="form-control-plaintext">@modifiedUser.LastName</p>
                            }
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 col-md-6 mb-3">
                            <label class="form-label">
                                Phone Number <span class="text-danger">*</span>
                            </label>
                            @if (isEditing)
                            {
                                <input type="tel"
                                       class="form-control"
                                       @bind="modifiedUser.PhoneNumber"
                                       @bind:event="oninput"
                                       required/>
                            }
                            else
                            {
                                <p class="form-control-plaintext">
                                    @(string.IsNullOrEmpty(modifiedUser.PhoneNumber) ? "—" : modifiedUser.PhoneNumber)
                                </p>
                            }
                        </div>
                        <div class="col-md-6 col-sm-12 mb-3">
                            <label class="form-label">
                                Email Address <i class="bi bi-lock-fill text-muted small"></i>
                            </label>
                            <p class="form-control-plaintext text-muted">@modifiedUser.Email</p>
                        </div>
                    </div>

                    @if (isEditing)
                    {
                        <hr/>
                        <div class="d-flex justify-content-end gap-2">
                            <button class="button button--grey button--outline" @onclick="CancelChanges">Cancel</button>
                            <button class="button button--primary" @onclick="SaveChanges" disabled="@(!HasChanges)">
                                Save Changes
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
}
else
{
    <LoadingSpinner/>
}

@code {
    [Parameter] public ResponseUserDto? user { get; set; }
    [Parameter] public EventCallback<ResponseUserDto> UserChanged { get; set; }
    
    private ResponseUserDto modifiedUser = new();
    private ResponseUserDto originalUser = new();
    private bool isEditing = false;

    private bool HasChanges => 
        modifiedUser.FirstName != originalUser.FirstName ||
        modifiedUser.LastName != originalUser.LastName ||
        modifiedUser.PhoneNumber != originalUser.PhoneNumber;

    protected override void OnParametersSet()
    {
        if (user != null && !isEditing)
        {
            CopyUserToLocal();
        }
    }

    private void CopyUserToLocal()
    {
        if (user == null) return;
        
        modifiedUser = new ResponseUserDto
        {
            Id = user.Id,
            Email = user.Email,
            FirstName = user.FirstName,
            LastName = user.LastName,
            PhoneNumber = user.PhoneNumber
        };
        
        originalUser = new ResponseUserDto
        {
            Id = user.Id,
            Email = user.Email,
            FirstName = user.FirstName,
            LastName = user.LastName,
            PhoneNumber = user.PhoneNumber
        };
    }

    private void StartEditing()
    {
        originalUser = new ResponseUserDto
        {
            Id = modifiedUser.Id,
            Email = modifiedUser.Email,
            FirstName = modifiedUser.FirstName,
            LastName = modifiedUser.LastName,
            PhoneNumber = modifiedUser.PhoneNumber
        };
        isEditing = true;
    }

    private void CancelChanges()
    {
        modifiedUser = new ResponseUserDto
        {
            Id = originalUser.Id,
            Email = originalUser.Email,
            FirstName = originalUser.FirstName,
            LastName = originalUser.LastName,
            PhoneNumber = originalUser.PhoneNumber
        };
        isEditing = false;
    }

    private async Task SaveChanges()
    {
        if (!HasChanges) return;
        
        try
        {
            var dto = new UpdateUserDto()
            {
                FirstName = modifiedUser.FirstName,
                LastName = modifiedUser.LastName,
                PhoneNumber = modifiedUser.PhoneNumber,
                Id = modifiedUser.Id,
            };

            var result = await Http.PatchAsJsonAsync($"api/User/{modifiedUser.Id}", dto);
            if (result.IsSuccessStatusCode)
            {
                originalUser = new ResponseUserDto
                {
                    Id = modifiedUser.Id,
                    Email = modifiedUser.Email,
                    FirstName = modifiedUser.FirstName,
                    LastName = modifiedUser.LastName,
                    PhoneNumber = modifiedUser.PhoneNumber
                };
                
                isEditing = false;
                await UserChanged.InvokeAsync(modifiedUser);
                MessageService.AddSuccess("Success", "User data has been updated successfully.");
            }
            else
            {
                MessageService.AddError("Error", "Error updating user, try again later or contact support");
            }
        }
        catch (Exception e)
        {
            Console.WriteLine($"Error saving data: {e.Message}");
        }
    }
}