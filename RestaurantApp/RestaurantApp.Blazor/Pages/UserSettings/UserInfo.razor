@using RestaurantApp.Shared.DTOs.Users
@using RestaurantApp.Blazor.Components
@using RestaurantApp.Blazor.Services
@inject HttpClient Http
@inject MessageService MessageService

@if (User != null)
{
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-person me-2"></i>User Information
                    </h5>
                    @if (!_isEditing)
                    {
                        <button class="button button--white button--outline" @onclick="StartEditing">
                            <i class="bi bi-pencil me-1"></i>Edit
                        </button>
                    }
                </div>
                
                <div class="card-body">
                    <p class="text-muted mb-4">Change basic info regarding your account</p>

                    <div class="row">
                        <div class="col-sm-12 col-md-6 mb-3">
                            <label class="form-label">
                                First Name <span class="text-danger">*</span>
                            </label>
                            @if (_isEditing)
                            {
                                <input type="text"
                                       class="form-control"
                                       @bind="_modifiedUser.FirstName"
                                       @bind:event="oninput"
                                       required/>
                            }
                            else
                            {
                                <p class="form-control-plaintext">@_modifiedUser.FirstName</p>
                            }
                        </div>
                        <div class="col-md-6 col-sm-12 mb-3">
                            <label class="form-label">
                                Last Name <span class="text-danger">*</span>
                            </label>
                            @if (_isEditing)
                            {
                                <input type="text"
                                       class="form-control"
                                       @bind="_modifiedUser.LastName"
                                       @bind:event="oninput"
                                       required/>
                            }
                            else
                            {
                                <p class="form-control-plaintext">@_modifiedUser.LastName</p>
                            }
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 col-md-6 mb-3">
                            <label class="form-label">
                                Phone Number <span class="text-danger">*</span>
                            </label>
                            @if (_isEditing)
                            {
                                <input type="tel"
                                       class="form-control"
                                       @bind="_modifiedUser.PhoneNumber"
                                       @bind:event="oninput"
                                       required/>
                            }
                            else
                            {
                                <p class="form-control-plaintext">
                                    @(string.IsNullOrEmpty(_modifiedUser.PhoneNumber) ? "—" : _modifiedUser.PhoneNumber)
                                </p>
                            }
                        </div>
                        <div class="col-md-6 col-sm-12 mb-3">
                            <label class="form-label">
                                Email Address <i class="bi bi-lock-fill text-muted small"></i>
                            </label>
                            <p class="form-control-plaintext text-muted">@_modifiedUser.Email</p>
                        </div>
                    </div>

                    @if (_isEditing)
                    {
                        <hr/>
                        <div class="d-flex justify-content-end gap-2">
                            <button class="button button--grey button--outline" @onclick="CancelChanges">Cancel</button>
                            <button class="button button--primary" @onclick="SaveChanges" disabled="@(!HasChanges)">
                                Save Changes
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
}
else
{
    <LoadingSpinner/>
}

@code {
    [Parameter] public ResponseUserDto? User { get; set; }
    [Parameter] public EventCallback<ResponseUserDto> UserChanged { get; set; }
    
    private ResponseUserDto _modifiedUser = new();
    private ResponseUserDto _originalUser = new();
    private bool _isEditing = false;

    private bool HasChanges => 
        _modifiedUser.FirstName != _originalUser.FirstName ||
        _modifiedUser.LastName != _originalUser.LastName ||
        _modifiedUser.PhoneNumber != _originalUser.PhoneNumber;

    protected override void OnParametersSet()
    {
        if (User != null && !_isEditing)
        {
            CopyUserToLocal();
        }
    }

    private void CopyUserToLocal()
    {
        if (User == null) return;
        
        _modifiedUser = new ResponseUserDto
        {
            Id = User.Id,
            Email = User.Email,
            FirstName = User.FirstName,
            LastName = User.LastName,
            PhoneNumber = User.PhoneNumber
        };
        
        _originalUser = new ResponseUserDto
        {
            Id = User.Id,
            Email = User.Email,
            FirstName = User.FirstName,
            LastName = User.LastName,
            PhoneNumber = User.PhoneNumber
        };
    }

    private void StartEditing()
    {
        _originalUser = new ResponseUserDto
        {
            Id = _modifiedUser.Id,
            Email = _modifiedUser.Email,
            FirstName = _modifiedUser.FirstName,
            LastName = _modifiedUser.LastName,
            PhoneNumber = _modifiedUser.PhoneNumber
        };
        _isEditing = true;
    }

    private void CancelChanges()
    {
        _modifiedUser = new ResponseUserDto
        {
            Id = _originalUser.Id,
            Email = _originalUser.Email,
            FirstName = _originalUser.FirstName,
            LastName = _originalUser.LastName,
            PhoneNumber = _originalUser.PhoneNumber
        };
        _isEditing = false;
    }

    private async Task SaveChanges()
    {
        if (!HasChanges) return;
        
        try
        {
            var dto = new UpdateUserDto()
            {
                FirstName = _modifiedUser.FirstName,
                LastName = _modifiedUser.LastName,
                PhoneNumber = _modifiedUser.PhoneNumber,
                Id = _modifiedUser.Id,
            };

            var result = await Http.PatchAsJsonAsync($"api/User/{_modifiedUser.Id}", dto);
            if (result.IsSuccessStatusCode)
            {
                _originalUser = new ResponseUserDto
                {
                    Id = _modifiedUser.Id,
                    Email = _modifiedUser.Email,
                    FirstName = _modifiedUser.FirstName,
                    LastName = _modifiedUser.LastName,
                    PhoneNumber = _modifiedUser.PhoneNumber
                };
                
                _isEditing = false;
                await UserChanged.InvokeAsync(_modifiedUser);
                MessageService.AddSuccess("Success", "User data has been updated successfully.");
            }
            else
            {
                MessageService.AddError("Error", "Error updating user, try again later or contact support");
            }
        }
        catch (Exception e)
        {
            Console.WriteLine($"Error saving data: {e.Message}");
        }
    }
}