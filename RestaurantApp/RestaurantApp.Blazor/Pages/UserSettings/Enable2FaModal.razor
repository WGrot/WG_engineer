@using System.ComponentModel.DataAnnotations
@using RestaurantApp.Blazor.Services
@using RestaurantApp.Shared.DTOs.Auth.TwoFactor

@inject HttpClient Http
@inject MessageService MessageService


@if (IsVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Enable Two-Factor Authentication</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    @if (Enable2FaData != null)
                    {
                        <div class="text-center mb-4">
                            <h6 class="mb-3">Scan the QR code with your authenticator app</h6>
                            <div class="d-flex justify-content-center mb-3">
                                <img src="@GetQrCodeDataUrl()" alt="QR Code" class="img-fluid" style="max-width: 250px;" />
                            </div>
                            <p class="text-muted small">
                                Or enter this key manually: <br />
                                <code class="user-select-all">@Enable2FaData.SecretKey</code>
                            </p>
                        </div>

                        <EditForm Model="_model" OnValidSubmit="Submit">
                            <div class="mb-3">
                                <label class="form-label">Enter the 6-digit code from your app</label>
                                <InputText class="form-control text-center" 
                                           @bind-Value="_model.Code" 
                                           placeholder="000000"
                                           maxlength="6"
                                           style="font-size: 1.5rem; letter-spacing: 0.5rem;" />
                                <ValidationMessage For="@(() => _model.Code)" />
                            </div>
                            <DataAnnotationsValidator />
                            <ValidationSummary />
                        </EditForm>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2 text-muted">Generating QR code...</p>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <div class="d-flex gap-2 w-100 justify-content-end">
                        <button type="button" class="button button--grey" @onclick="Close" disabled="@_isSaving">
                            Cancel
                        </button>
                        <button type="button" class="button button--primary btn-primary" @onclick="Submit" disabled="@(_isSaving || Enable2FaData == null)">
                            @if (_isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Enabling...</span>
                            }
                            else
                            {
                                <span>Enable 2FA</span>
                            }
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {

    
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public Enable2FAResponse? Enable2FaData { get; set; }
    [Parameter] public EventCallback On2FaEnabled { get; set; }
    [Parameter] public string CurrentUserId {get; set; } = string.Empty;

    private Verify2FaModel _model = new();
    private bool _isSaving = false;

    private async Task Close()
    {
        ClearForm();
        await IsVisibleChanged.InvokeAsync(false);
    }

    private void ClearForm()
    {
        _model = new();
        _isSaving = false;
    }

    private string GetQrCodeDataUrl()
    {
        if (Enable2FaData?.QrCodeImage == null || Enable2FaData.QrCodeImage.Length == 0)
            return string.Empty;

        var base64 = Convert.ToBase64String(Enable2FaData.QrCodeImage);
        return $"data:image/png;base64,{base64}";
    }

    private async Task Submit()
    {
        if (string.IsNullOrWhiteSpace(_model.Code) || _model.Code.Length != 6)
        {
            MessageService.AddError("Error", "Please enter a valid 6-digit code.");
        }

        _isSaving = true;
        StateHasChanged();

        try
        {
            
            
            var result = await Http.PostAsJsonAsync("api/TwoFactor/verify-and-enable", new Verify2FARequest
            {
                Code = _model.Code,
                UserId = CurrentUserId
            });

            if (result.IsSuccessStatusCode)
            {
                MessageService.AddSuccess("Success", "Two-factor authentication has been enabled successfully.");

                await On2FaEnabled.InvokeAsync();
                await Close();
            }
            else
            {
                var errorContent = await result.Content.ReadAsStringAsync();
                string content = errorContent.Contains("Invalid verification code")
                    ? "Invalid verification code. Please try again."
                    : "An error occurred while enabling 2FA. Please try again.";
                MessageService.AddError("Error", content);


            }
        }
        catch (Exception)
        {
            MessageService.AddError("Error","An unexpected error occurred. Please try again.");
        }
        finally
        {
            _isSaving = false;
            StateHasChanged();
        }
    }

    public class Verify2FaModel
    {
        [Required(ErrorMessage = "Verification code is required")]
        [StringLength(6, MinimumLength = 6, ErrorMessage = "Code must be 6 digits")]
        [RegularExpression(@"^\d{6}$", ErrorMessage = "Code must contain only digits")]
        public string Code { get; set; } = string.Empty;
    }
}