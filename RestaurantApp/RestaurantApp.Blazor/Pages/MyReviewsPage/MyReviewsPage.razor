@page "/my-reviews"
@using RestaurantApp.Blazor.Services
@using RestaurantApp.Blazor.Components

<div class="container mt-4">
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="statusEnumDto">
                <span class="visually-hidden">Loading reviews...</span>
            </div>
        </div>
    }
    else
    {
        <div class="col-12 my-3 card bg-primary">
            <div class="card-body  text-white" >
                <h2 class="text-center mb-0">
                    <i class="bi bi-star-half me-1"></i>Your reviews
                </h2>
                <h5 class="text-white text-center">View all your reviews</h5>
            </div>
        </div>
        
        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <div class="card shadow border-1 h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div class="card-body">
                            <h6 class="text-uppercase text-muted mb-2">Total Reviews</h6>
                            <h2 class="fw-bold mb-1">
                                @reviews.Count
                            </h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card shadow border-1 h-100">
                    <div class="card-body d-flex justify-content-between align-items-center">
                        <div class="card-body">
                            <h6 class="text-uppercase text-muted mb-2">Average Rating</h6>
                            <h2 class="fw-bold mb-1">@averageRating</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        if (!reviews.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                You haven't written any reviews yet. Visit a restaurant and share your experience!
            </div>
        }
        else
        {
            
            @foreach (var review in reviews)
            {
                <ReviewCard Review="review" OnCardClicked="OpenEditModal">
                    <Title>
                        <i class="bi bi-house-door"></i> @review.RestaurantName
                    </Title>
                    <Subtitle>
                        <i class="bi bi-geo-alt-fill"></i> @review.RestaurantAddress
                    </Subtitle>
                </ReviewCard>
            }
        }
    }
    
</div>

<EditReviewModal
    @bind-IsVisible="showEditModal"
    Review="selectedReview"
    OnUpdate="UpdateReview"
    OnDelete="DeleteReviewFromModal"
    OnClose="CloseEditModal"/>

<style>
    .review-card {
        transition: all 0.3s ease;
        border-left: 4px solid transparent;
    }

    .review-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .15) !important;
        border-left-color: var(--primary-color);
    }

    .dropdown-menu {
        min-width: 120px;
    }

    .dropdown-item:hover {
        background-color: #f8f9fa;
    }

    .dropdown-item.text-danger:hover {
        background-color: #fff5f5;
    }
</style>