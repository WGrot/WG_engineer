@using System.Net
@using RestaurantApp.Shared.DTOs
@using RestaurantApp.Shared.DTOs.Restaurant
@using RestaurantApp.Shared.DTOs.Settings
@using RestaurantApp.Shared.Models
@using RestaurantApp.Blazor.Components
@using RestaurantApp.Blazor.Services
@using RestaurantApp.Shared.Common

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <h3 class="text-center mb-4">
                <i class="bi bi-gear-fill me-2"></i>
                Restaurant Settings
            </h3>

            @if (!isLoading)
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-check me-2"></i>
                            Reservation Confirmation
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check form-switch">
                            <input class="form-check-input"
                                   style="cursor: pointer;"
                                   type="checkbox"
                                   id="needConfirmationCheckbox"
                                   @bind="settings.ReservationsNeedConfirmation"
                                   @bind:after="MarkAsChanged">
                            <label class="form-check-label" style="cursor: pointer;" for="needConfirmationCheckbox">
                                Require confirmation for reservations
                            </label>
                        </div>
                        <small class="text-muted d-block mt-2">
                            <i class="bi bi-info-circle me-1"></i>
                            When enabled, reservations will need manual approval
                        </small>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-clock me-2"></i>
                            Reservation Duration
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Minimum Duration</label>
                                <div class="input-group">
                                    <input type="number"
                                           class="form-control"
                                           min="15"
                                           max="480"
                                           value="@((int)settings.MinReservationDuration.TotalMinutes)"
                                           @onchange="@(e => OnMinDurationChanged(e))">
                                    <span class="input-group-text">minutes</span>
                                </div>
                                <small class="text-muted">Shortest allowed reservation</small>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Maximum Duration</label>
                                <div class="input-group">
                                    <input type="number"
                                           class="form-control"
                                           min="30"
                                           max="480"
                                           value="@((int)settings.MaxReservationDuration.TotalMinutes)"
                                           @onchange="@(e => OnMaxDurationChanged(e))">
                                    <span class="input-group-text">minutes</span>
                                </div>
                                <small class="text-muted">Longest allowed reservation</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-calendar-range me-2"></i>
                            Booking Window
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Minimum Advance Time</label>
                                <div class="input-group">
                                    <input type="number"
                                           class="form-control"
                                           min="0"
                                           max="168"
                                           value="@((int)settings.MinAdvanceBookingTime.TotalHours)"
                                           @onchange="@(e => OnMinAdvanceChanged(e))">
                                    <span class="input-group-text">hours</span>
                                </div>
                                <small class="text-muted">How early before the visit can guests book</small>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Maximum Advance Time</label>
                                <div class="input-group">
                                    <input type="number"
                                           class="form-control"
                                           min="1"
                                           max="365"
                                           value="@((int)settings.MaxAdvanceBookingTime.TotalDays)"
                                           @onchange="@(e => OnMaxAdvanceChanged(e))">
                                    <span class="input-group-text">days</span>
                                </div>
                                <small class="text-muted">How far in advance guests can book</small>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-people me-2"></i>
                            Guest Limits
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Minimum Guests</label>
                                <div class="input-group">
                                    <input type="number"
                                           class="form-control"
                                           min="1"
                                           max="100"
                                           value="@settings.MinGuestsPerReservation"
                                           @onchange="@(e => OnMinGuestsChanged(e))">
                                    <span class="input-group-text">guests</span>
                                </div>
                                <small class="text-muted">Minimum party size</small>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Maximum Guests</label>
                                <div class="input-group">
                                    <input type="number"
                                           class="form-control"
                                           min="1"
                                           max="500"
                                           value="@settings.MaxGuestsPerReservation"
                                           @onchange="@(e => OnMaxGuestsChanged(e))">
                                    <span class="input-group-text">guests</span>
                                </div>
                                <small class="text-muted">Maximum party size</small>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Reservations per User</label>
                                <div class="input-group">
                                    <input type="number"
                                           class="form-control"
                                           min="1"
                                           max="50"
                                           value="@settings.ReservationsPerUserLimit"
                                           @onchange="@(e => OnReservationsPerUserChanged(e))">
                                    <span class="input-group-text">limit</span>
                                </div>
                                <small class="text-muted">Max active reservations per user</small>
                            </div>
                        </div>
                    </div>
                </div>

                @if (hasChanges)
                {
                    <div class="card shadow-sm mb-4 border-success save-changes-card">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div>
                                <span class="fw-semibold">You have unsaved changes</span>
                            </div>
                            <div class="d-flex gap-2">
                                <button class="button button--grey button--outline" @onclick="ResetChanges" disabled="@isSaving">
                                    <i class="bi bi-x-circle me-1"></i>
                                    Cancel
                                </button>
                                <button class="button button--primary" @onclick="SaveChanges" disabled="@isSaving">
                                    @if (isSaving)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        <span>Saving...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check-circle me-1"></i>
                                        <span>Save Changes</span>
                                    }
                                </button>
                            </div>
                        </div>
                    </div>
                }

                <div class="card shadow-sm border-danger">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            Danger Zone
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                            <div>
                                <h6 class="mb-1">Delete Restaurant</h6>
                                <p class="text-muted mb-0 small">
                                    This action is permanent and cannot be undone. All data will be lost.
                                </p>
                            </div>
                            <button class="btn btn-danger" @onclick="ShowDeleteModal">
                                <i class="bi bi-trash-fill me-2"></i>
                                Delete
                            </button>
                        </div>
                    </div>
                </div>
            }
            else if(isLoading)
            {
                <LoadingSpinner Title="Loading settings..."/>
            }

        </div>
    </div>
</div>

<ConfirmationModal @bind-IsVisible="showDeleteModal"
                   Title="Confirm Restaurant Deletion"
                   Message="Are you sure you want to permanently delete this restaurant? All reservations, menus, and settings will be lost."
                   IsProcessing="isDeleting"
                   ConfirmButtonText="Yes, Delete Restaurant"
                   cancelButtonText="Cancel"
                   OnConfirm="DeleteRestaurant"
                   OnCancel="HideDeleteModal" />

<style>
    .card {
        border-radius: 10px;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1) !important;
    }

    .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

    .form-check-input {
        width: 3em;
        height: 1.5em;
    }

    .card-header {
        border-radius: 10px 10px 0 0 !important;
    }

    .btn {
        transition: all 0.2s;
    }

    .btn:hover {
        transform: translateY(-1px);
    }

    .save-changes-card {
        position: sticky;
        bottom: 1rem;
        z-index: 100;
        background: white;
        border: 2px solid var(--primary-color) !important;
        animation: slideUp 0.3s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .input-group-text {
        min-width: 80px;
        justify-content: center;
    }
</style>
