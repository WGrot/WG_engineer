@using RestaurantApp.Shared.Models
@using System.Net.Http.Json
@using RestaurantApp.Blazor.Models.DTO
@using RestaurantApp.Shared.DTOs
@using RestaurantApp.Shared.DTOs.Employees
@using RestaurantApp.Shared.DTOs.Permissions
@inject HttpClient Http

@if (IsVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Manage permissions - @Employee?.FirstName @Employee?.LastName</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }
                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success">@successMessage</div>
                    }
                    
                    @if (isLoadingPermissions)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="statusEnumDto">
                                <span class="visually-hidden">Loading permissions...</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="mb-4">
                            <h6>employee info</h6>
                            <div class="card">
                                <div class="card-body">
                                    <p class="mb-1"><strong>Full name:</strong> @Employee?.FirstName @Employee?.LastName</p>
                                    <p class="mb-1"><strong>Email:</strong> @Employee?.Email</p>
                                    <p class="mb-1"><strong>Phone:</strong> @Employee?.PhoneNumber</p>
                                    <p class="mb-0"><strong>Current role:</strong> 
                                        <span class="badge bg-primary">@_currentRoleEnumDto</span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h6>Change employee role</h6>
                            <select class="form-control" @bind="_selectedRoleEnumDto">
                                @foreach (var role in Enum.GetValues<RestaurantRoleEnumDto>())
                                {
                                    <option value="@role" selected="@(role == _currentRoleEnumDto)">@role</option>
                                }
                            </select>
                        </div>

                        <div class="mb-4">
                            <h6>Employee permissions</h6>
                            <div class="card">
                                <div class="card-body">
                                    @foreach (var permission in Enum.GetValues<PermissionTypeEnumDto>())
                                    {
                                        <div class="form-check form-switch mb-2">
                                            <input class="form-check-input" 
                                                   type="checkbox" 
                                                   id="permission-@permission"
                                                   checked="@selectedPermissions.Contains(permission)"
                                                   @onchange="@((ChangeEventArgs e) => TogglePermission(permission, e))">
                                            <label class="form-check-label" for="permission-@permission">
                                                @GetPermissionDisplayName(permission)
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h6>Extra settings</h6>
                            <div class="card">
                                <div class="card-body">
                                    <div class="form-check form-switch mb-2">
                                        <input class="form-check-input" type="checkbox" @bind="isActive" id="isActive">
                                        <label class="form-check-label" for="isActive">
                                            Account active
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="button button--grey " @onclick="Close">Cancel</button>
                    <button type="button" class="button button--primary" @onclick="SaveChanges" disabled="@(isSaving || isLoadingPermissions)">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                            <span>Saving...</span>
                        }
                        else
                        {
                            <span>Save changes</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public RestaurantEmployeeDto? Employee { get; set; }
    [Parameter] public int RestaurantId { get; set; }
    [Parameter] public EventCallback OnPermissionsUpdated { get; set; }
    
    private bool isSaving = false;
    private bool isLoadingPermissions = false;
    private string? errorMessage;
    private string? successMessage;
    
    private RestaurantRoleEnumDto _currentRoleEnumDto = RestaurantRoleEnumDto.Employee;
    private RestaurantRoleEnumDto _selectedRoleEnumDto = RestaurantRoleEnumDto.Employee;
    private HashSet<PermissionTypeEnumDto> selectedPermissions = new HashSet<PermissionTypeEnumDto>();
    private List<RestaurantPermissionDto> permissionsResponse = new List<RestaurantPermissionDto>();
    private bool isActive = true;

    protected override async Task OnParametersSetAsync()
    {
        if (IsVisible && Employee != null)
        {
            await LoadPermissions();
        }
    }

    private async Task LoadPermissions()
    {
        isLoadingPermissions = true;
        errorMessage = null;
        
        try
        {
            permissionsResponse = await Http.GetFromJsonAsync<List<RestaurantPermissionDto>>($"api/Permissions/employee/{Employee.Id}/");
            _currentRoleEnumDto = Employee.RoleEnumDto;
            _selectedRoleEnumDto = Employee.RoleEnumDto;
            isActive = Employee.IsActive;
            selectedPermissions.Clear();
            
            foreach (RestaurantPermissionDto permission in permissionsResponse)
            {
                selectedPermissions.Add(permission.Permission);
            }
            
        }
        catch (Exception ex)
        {
            errorMessage = $"Error while loading permissions {ex.Message}";
            Console.WriteLine($"Error loading permissions: {ex}");
        }
        finally
        {
            isLoadingPermissions = false;
        }
    }

    private void TogglePermission(PermissionTypeEnumDto permission, ChangeEventArgs e)
    {
        if (e.Value is bool isChecked)
        {
            if (isChecked)
            {
                selectedPermissions.Add(permission);
            }
            else
            {
                selectedPermissions.Remove(permission);
            }
        }
    }

    private string GetPermissionDisplayName(PermissionTypeEnumDto permission)
    {
        return permission switch
        {
            PermissionTypeEnumDto.ViewReservations => "View Reservations",
            PermissionTypeEnumDto.ManageReservations => "Manage Reservations",
            PermissionTypeEnumDto.ManageTables => "Manage Tables",
            PermissionTypeEnumDto.ManageMenu => "Manage Menu",
            PermissionTypeEnumDto.ManageEmployees => "Manage Employees",
            PermissionTypeEnumDto.ManagePermissions => "View Reports",
            PermissionTypeEnumDto.ManageRestaurantSettings => "Manage Restaurant Settings",
            PermissionTypeEnumDto.ManageFinances => "Manage Finances",
            _ => permission.ToString()
        };
    }
    
    private async Task SaveChanges()
    {
        isSaving = true;
        errorMessage = null;
        successMessage = null;
    
        bool allSuccess = true;
        
        await SavePermissions();
        if (!string.IsNullOrEmpty(errorMessage))
        {
            allSuccess = false;
        }
        
        bool roleSuccess = await SaveRole();
        if (!roleSuccess)
        {
            allSuccess = false;
        }
        
        await SaveExtraDetails();
        if (!string.IsNullOrEmpty(errorMessage))
        {
            allSuccess = false;
        }
    
        isSaving = false;
        
        if (allSuccess)
        {
            await OnPermissionsUpdated.InvokeAsync();
            await Close();
        }
    }

    private async Task<bool> SaveRole()
    {
        if (Employee == null) return false;
        if (_selectedRoleEnumDto == _currentRoleEnumDto) return true; // Brak zmian - sukces
    
        try
        {
            var dto = new UpdateEmployeeDto
            {
                Id = Employee.Id,
                IsActive = isActive,
                RoleEnumDto = _selectedRoleEnumDto
            };
            var response = await Http.PutAsJsonAsync(
                $"api/Employees/{Employee.Id}?restaurantId={RestaurantId}", 
                dto  
            );
        
            if (response.IsSuccessStatusCode)
            {
                _currentRoleEnumDto = _selectedRoleEnumDto;
                
                Employee.RoleEnumDto = _selectedRoleEnumDto;
                
                if (string.IsNullOrEmpty(successMessage))
                {
                    successMessage = "RoleEnumDto has been updated";
                }
                else
                {
                    successMessage += " RoleEnumDto has been updated.";
                }
            
                return true;
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                errorMessage = string.IsNullOrEmpty(errorMessage) 
                    ? $"Error in role update: {error}"
                    : errorMessage + $"\nError in role update: {error}";
                
                _selectedRoleEnumDto = _currentRoleEnumDto;
                return false;
            }
        }
        catch (Exception ex)
        {
            errorMessage = string.IsNullOrEmpty(errorMessage)
                ? $"Error in role update: {ex.Message}"
                : errorMessage + $"\nError in role update: {ex.Message}";
            
            _selectedRoleEnumDto = _currentRoleEnumDto;
            return false;
        }
    }

    private async Task SaveExtraDetails()
    {
        if (Employee == null) return;
        if (isActive == Employee.IsActive) return;
        var dto = new UpdateEmployeeDto
        {
            Id = Employee.Id,
            IsActive = isActive,
            RoleEnumDto = Employee.RoleEnumDto
        };
        var response = await Http.PutAsJsonAsync(
            $"api/Employees/{Employee.Id}?restaurantId={RestaurantId}", 
            dto  
        );
        
        if (!response.IsSuccessStatusCode)
        {
            errorMessage = await response.Content.ReadAsStringAsync();
        }
    }

    private async Task SavePermissions()
    {
        if (Employee == null) return;
        
        try
        {

            var updatePermissionsDto = new UpdateEmployeePermisionsDto
            {
                EmployeeId = Employee.Id,
                RestaurantId = RestaurantId,
                Permissions = selectedPermissions.ToList()
            };

             var response = await Http.PutAsJsonAsync($"api/Permissions/employee/update-permissions", updatePermissionsDto);
             
             if (response.IsSuccessStatusCode)
            {
                successMessage = "Permissions have been updated!";
                
            }
            else
            {
                var errorResponse = await response.Content.ReadAsStringAsync();
                errorMessage = $"Error updating permissions: {errorResponse}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"error: {ex.Message}";
            Console.WriteLine($"Error saving permissions: {ex}");
        }
    }

    private async Task Close()
    {
        ClearForm();
        await IsVisibleChanged.InvokeAsync(false);
    }

    private void ClearForm()
    {
        errorMessage = null;
        successMessage = null;
        isSaving = false;
        isLoadingPermissions = false;
        selectedPermissions.Clear();
    }
}