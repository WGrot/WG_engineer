@using RestaurantApp.Shared.DTOs.Menu.MenuItems
@using RestaurantApp.Shared.Models


@if (menu != null)
{
    <div class="container">
        <h3 class="mb-4 w-100 text-center">Manage restaurant menu</h3>
        <!-- TAGS SECTION -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Tags Management</h5>
                <button class="base-button" @onclick="ShowAddTagForm">Add New Tag</button>
            </div>
            <div class="card-body">
                @if (showAddTag)
                {
                    <div class="mb-3 justify-content-center">
                        <input type="text" class="form-control mb-2" @bind="newTag.Name" placeholder="Tag Name"/>
                        <div class="d-flex flex-column align-items-center mb-3">
                            <label class="mb-2">Select color for tag</label>
                            <input type="color" class="form-control form-control-color" @bind="newTag.ColorHex"/>
                        </div>

                        <div class="d-flex justify-content-center gap-2">
                            <button class="button button--primary me-2" @onclick="AddTag">Add</button>
                            <button class="button button--grey btn-sm" @onclick="() => showAddTag = false">Cancel
                            </button>
                        </div>

                    </div>
                }

                <ul class="list-group">
                    @foreach (var tag in tags)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span class="badge rounded-pill text-white"
                                  style="background-color:@tag.ColorHex">@tag.Name</span>
                            <button class="button button--red button--outline" @onclick="() => DeleteTag(tag.Id)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- CATEGORIES SECTION -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Categories</h5>
                <button class="base-button" @onclick="ShowAddCategoryForm">Add New Category</button>
            </div>
            <div class="card-body">
                @if (showAddCategory)
                {
                    <div class="mb-3">
                        <input type="text" class="form-control mb-2" @bind="newCategory.Name"
                               placeholder="Category Name"/>
                        <input type="text" class="form-control mb-2" @bind="newCategory.Description"
                               placeholder="Description"/>
                        <input type="number" class="form-control mb-2" @bind="newCategory.DisplayOrder"
                               placeholder="Display Order"/>
                        <div class="d-flex justify-content-center mt-2">
                            <button class="button button--primary me-2" @onclick="AddCategory">Add</button>
                            <button class="button button--grey btn-sm" @onclick="() => showAddCategory = false">Cancel
                            </button>
                        </div>


                    </div>
                }

                <ul class="list-group">
                    @foreach (var category in menu.Categories)
                    {
                        @if (editingCategoryId == category.Id)
                        {
                            <div class="card card-body mt-1 shadow-sm">
                                <h6 class="fw-bold mb-2">Edit Category</h6>
                                <div class="row g-2">
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" @bind="category.Name"
                                               placeholder="Category Name"/>
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" @bind="category.Description"
                                               placeholder="Description"/>
                                    </div>
                                    <div class="col-md-2">
                                        <input type="number" class="form-control" @bind="category.DisplayOrder"
                                               placeholder="Order"/>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="form-check mt-2">
                                            <input type="checkbox" class="form-check-input" @bind="category.IsActive"
                                                   id="@($"active-{category.Id}")"/>
                                            <label class="form-check-label" for="@($"active-{category.Id}")">
                                                Active
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-center mt-2">
                                    <button class="button button--primary me-2"
                                            @onclick="() => SaveCategory(category)">Save
                                    </button>
                                    <button class="button button--grey btn-sm"
                                            @onclick="() => editingCategoryId = null">Cancel
                                    </button>
                                </div>
                            </div>
                        }
                        else
                        {
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center"
                                     @onclick="() => ToggleCategory(category.Id)" style="cursor: pointer">
                                    <div class="d-flex align-items-center gap-2">
                                        <button class="btn btn-link btn-sm p-0 text-dark text-decoration-none"
                                        >
                                            <i class="bi @(expandedCategories.Contains(category.Id) ? "bi-chevron-up" : "bi-chevron-down") fs-5"></i>
                                        </button>
                                        <h4 class="mb-0">@category.Name</h4>
                                    </div>
                                    <div class="d-flex gap-1">
                                        <button class="button button--grey button--outline me-1"
                                                @onclick="() => editingCategoryId = category.Id"
                                                @onclick:stopPropagation="true"
                                                @onclick:preventDefault="true"
                                        >Edit
                                        </button>
                                        <button class="button button--red button--outline"
                                                @onclick="() => DeleteCategory(category.Id)"
                                                @onclick:stopPropagation="true"
                                                @onclick:preventDefault="true"
                                        ><i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(category.Description))
                                {
                                    <small class="text-muted">@category.Description</small>
                                }

                                @if (expandedCategories.Contains(category.Id))
                                {
                                    <div class="mt-2 ps-3">
                                        <button class="base-button w-100 mb-3"
                                                @onclick="() => ShowAddItemForm(category.Id)">
                                            + Add Item
                                        </button>

                                        <!-- Formularz dodawania pozycji -->
                                        @if (showAddItem && addItemToCategoryId == category.Id)
                                        {
                                            <div class="card card-body mb-3 shadow-sm">
                                                <h6 class="fw-bold mb-2">New Item</h6>
                                                <div class="row g-2">
                                                    <div class="col-md-6">
                                                        <input type="text" class="form-control" @bind="newItem.Name"
                                                               placeholder="Item Name"/>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <input type="text" class="form-control"
                                                               @bind="newItem.Description"
                                                               placeholder="Description"/>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <input type="number" class="form-control"
                                                               @bind="newItem.Price.Amount"
                                                               placeholder="Price"/>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <input type="text" class="form-control"
                                                               @bind="newItem.CurrencyCode"
                                                               placeholder="Currency (PLN)"/>
                                                    </div>
                                                </div>

                                                <div class="d-flex justify-content-center mt-2">
                                                    <button class="base-button btn-sm me-2"
                                                            @onclick="() => AddItem(category.Id)">Add
                                                    </button>
                                                    <button class="grey-button btn-sm"
                                                            @onclick="() => showAddItem = false">Cancel
                                                    </button>
                                                </div>
                                            </div>
                                        }


                                        <div class="d-flex flex-column gap-3">
                                            @foreach (var item in category.Items)
                                            {
                                                <MenuItemEditComponent
                                                    Item="item"
                                                    Categories="menu.Categories"
                                                    Tags="tags"
                                                    OnSave="SaveItem"
                                                    OnDelete="DeleteItem"
                                                    OnMove="HandleMoveItem"/>
                                            }
                                        </div>
                                    </div>
                                }
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>

        <!-- UNCATEGORIZED ITEMS -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-start align-items-center" @onclick="ToggleUncategorized">
                <button class="btn btn-link btn-sm p-0 text-dark text-decoration-none"
                >
                    <i class="bi @(showUncategorized ? "bi-chevron-up" : "bi-chevron-down") fs-5"></i>
                </button>

                <h5 class="mb-0">Uncategorized Items</h5>
            </div>
            @if (showUncategorized)
            {
                <div class="card-body">
                    <button class="button button--primary w-100" @onclick="() => ShowAddItemForm(null)">Add Item
                    </button>

                    <!-- Formularz dodawania pozycji -->
                    @if (showAddItem && addItemToCategoryId == null)
                    {
                        <div class="card card-body mb-3 shadow-sm">
                            <h6 class="fw-bold mb-2">New Item</h6>
                            <div class="row g-2">
                                <div class="col-md-6">
                                    <input type="text" class="form-control" @bind="newItem.Name"
                                           placeholder="Item Name"/>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" class="form-control" @bind="newItem.Description"
                                           placeholder="Description"/>
                                </div>
                                <div class="col-md-4">
                                    <input type="number" class="form-control" @bind="newItem.Price.Amount"
                                           placeholder="Price"/>
                                </div>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" @bind="newItem.CurrencyCode"
                                           placeholder="Currency (PLN)"/>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center mt-2">
                                <button class="base-button btn-sm me-2"
                                        @onclick="() => AddItem(null)">Add
                                </button>
                                <button class="grey-button btn-sm"
                                        @onclick="() => showAddItem = false">Cancel
                                </button>
                            </div>
                        </div>
                    }

                    @if (menu.Items?.Any() == true)
                    {
                        <ul class="list-group">
                            @foreach (var item in uncategorizedItems)
                            {
                                <li class="list-group-item">
                                    <MenuItemEditComponent
                                        Item="item"
                                        Categories="menu.Categories"
                                        OnSave="SaveItem"
                                        OnDelete="DeleteItem"
                                        OnMove="HandleMoveItem"/>
                                </li>
                            }
                        </ul>
                    }

                </div>
            }
        </div>
    </div>
}
else if (isLoading)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Loading...</p>
    </div>
}
else
{
    <div class="mb-3 text-start w-75">
        <label for="menuName" class="form-label">Menu name</label>
        <input type="text" class="form-control" id="menuName" @bind="newMenu.Name" placeholder="Enter menu name">
    </div>

    <div class="mb-3 text-start w-75">
        <label for="MenuDescription" class="form-label">Menu description</label>
        <input type="text" class="form-control" id="MenuDescription" @bind="newMenu.Description"
               placeholder="Enter menu descritption">
    </div>


    <div class="text-center mt-4 ">
        <button class="button button--primary button--lg w-75" @onclick="CreateMenu">Add Menu</button>
    </div>
}
