@using RestaurantApp.Shared.Models
@using RestaurantApp.Blazor.Models.DTO
@using RestaurantApp.Shared.DTOs.Employees
@using RestaurantApp.Shared.DTOs.Users
@inject HttpClient Http

@if (IsVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(_errorMessage))
                    {
                        <div class="alert alert-danger">@_errorMessage</div>
                    }
                    @if (!string.IsNullOrEmpty(_successMessage))
                    {
                        <div class="alert alert-success">@_successMessage</div>
                    }

                    <div class="mb-3">
                        <label class="form-label">e-mail</label>
                        <input type="text" class="form-control" @bind="_email"/>
                    </div>
                    <div>
                        <button class="button button--primary w-100 mb-3" @onclick="SearchUsers">Search for Users</button>
                    </div>
                    
                    <div>
                        @foreach (var user in _users)
                        {
                            <div style="cursor: pointer" class="card mb-2" @onclick="() => _selectedUser = user">
                                <div class="card-header @(_selectedUser == user ? "bg-primary text-white" : "bg-white")">
                                    <h5 class="card-title @(_selectedUser == user ? "text-white" : "text-dark")">
                                        <i class="bi bi-person-fill"></i> @user.FirstName @user.LastName
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="card-text">
                                        <p class="mb-1">
                                            <i class="bi bi-envelope"></i>
                                            <small>@user.Email</small>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                        
                    </div>
                    
                    @if (_selectedUser != null)
                    {
                        <div class="mb-3">
                            <label class="form-label">Rola</label>
                            <select class="form-control" @bind="_selectedRole">
                                <option value="">-- Select role --</option>
                                @foreach (var role in Enum.GetValues<RestaurantRoleEnumDto>())
                                {
                                    <option value="@role">@role</option>
                                }
                            </select>
                        </div>
                    }


                </div>
                <div class="modal-footer">
                    <div class="d-flex">
                        <button type="button" class="button button--primary" @onclick="AddEmploye" disabled="@_isSaving">
                            @if (_isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Saving...</span>
                            }
                            else
                            {
                                <span>Save</span>
                            }
                        </button>
                        <button type="button" class="button button--grey" @onclick="Close">Anuluj</button>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public int RestaurantId { get; set; }
    [Parameter] public EventCallback<CreateUserResponse> OnEmployeeAdded { get; set; }
    [Parameter] public string Title { get; set; } = "Search for existing employee accounts";


    private List<ResponseUserDto> _users = new List<ResponseUserDto>();
    private ResponseUserDto? _selectedUser ;
    private bool _isSaving;
    private string _email = "";
    private RestaurantRoleEnumDto? _selectedRole;
    private string? _errorMessage;
    private string? _successMessage;

    private async Task Close()
    {
        ClearForm();
        await IsVisibleChanged.InvokeAsync(false);
    }

    private void ClearForm()
    {
        _email = "";
        _selectedRole = null;
        _errorMessage = null;
        _successMessage = null;
        _isSaving = false;
    }

    private async Task SearchUsers()
    {
        var response = await Http.GetFromJsonAsync<List<ResponseUserDto>>($"api/User/search?email={_email}&amount=3");
        if (response != null) _users = response;
    }
    
    private async Task AddEmploye()
    {
        if (!_selectedRole.HasValue)
        {
            _errorMessage = "Please Select employee role";
            return;
        }

        _isSaving = true;
        _errorMessage = null;
        _successMessage = null;

        try
        
        {
            var createEmployeeDto = new CreateEmployeeDto()
            {
                UserId = _selectedUser!.Id,
                RestaurantId = RestaurantId,
                RoleEnumDto = _selectedRole.Value
            };
            
            var response = await Http.PostAsJsonAsync("api/Employees", createEmployeeDto);
            
            
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<CreateUserResponse>();
                _successMessage = $"Employee {_selectedUser.FirstName} {_selectedUser.LastName} added successfully.";
                
                if (OnEmployeeAdded.HasDelegate)
                {
                    await OnEmployeeAdded.InvokeAsync(result); 
                }
                
                ClearForm();
                
                await Task.Delay(2000);
                await Close();
            }
            else
            {
                var errorResponse = await response.Content.ReadAsStringAsync();
                _errorMessage = $"Error adding employee {errorResponse}";
            }
        }
        finally
        {
            _isSaving = false;
        }
    }

}