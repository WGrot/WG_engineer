@using RestaurantApp.Shared.Models
@using System.Net.Http.Json
@using RestaurantApp.Blazor.Extensions
@using RestaurantApp.Blazor.Models.DTO
@using RestaurantApp.Shared.DTOs
@using RestaurantApp.Shared.DTOs.Employees
@using RestaurantApp.Shared.DTOs.Users
@inject HttpClient Http

@if (IsVisible)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@Title</h5>
                    <button type="button" class="btn-close" @onclick="Close"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger">@errorMessage</div>
                    }
                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success">@successMessage</div>
                    }

                    <div class="mb-3">
                        <label class="form-label">e-mail</label>
                        <input type="text" class="form-control" @bind="email"/>
                    </div>
                    <div>
                        <button class="button button--primary w-100 mb-3" @onclick="searchUsers">Search for Users</button>
                    </div>
                    
                    <div>
                        @foreach (var user in users)
                        {
                            <div style="cursor: pointer" class="card mb-2" @onclick="() => selectedUser = user">
                                <div class="card-header @(selectedUser == user ? "bg-primary text-white" : "bg-white")">
                                    <h5 class="card-title @(selectedUser == user ? "text-white" : "text-dark")">
                                        <i class="bi bi-person-fill"></i> @user.FirstName @user.LastName
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="card-text">
                                        <p class="mb-1">
                                            <i class="bi bi-envelope"></i>
                                            <small>@user.Email</small>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                        
                    </div>
                    
                    @if (selectedUser != null)
                    {
                        <div class="mb-3">
                            <label class="form-label">Rola</label>
                            <select class="form-control" @bind="selectedRole">
                                <option value="">-- Select role --</option>
                                @foreach (var role in Enum.GetValues<RestaurantRoleEnumDto>())
                                {
                                    <option value="@role">@role</option>
                                }
                            </select>
                        </div>
                    }


                </div>
                <div class="modal-footer">
                    <div class="d-flex">
                        <button type="button" class="button button--primary" @onclick="AddEmploye" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm me-2"></span>
                                <span>Saving...</span>
                            }
                            else
                            {
                                <span>Save</span>
                            }
                        </button>
                        <button type="button" class="button button--grey" @onclick="Close">Anuluj</button>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback<bool> IsVisibleChanged { get; set; }
    [Parameter] public int RestaurantId { get; set; }
    [Parameter] public EventCallback<CreateUserResponse> OnEmployeeAdded { get; set; }
    [Parameter] public string Title { get; set; } = "Search for existing employee accounts";


    private List<ResponseUserDto> users = new List<ResponseUserDto>();
    private ResponseUserDto? selectedUser = null;
    private bool isSaving = false;
    private string email = "";
    private RestaurantRoleEnumDto? selectedRole = null;
    private string? errorMessage;
    private string? successMessage;

    private async Task Close()
    {
        ClearForm();
        await IsVisibleChanged.InvokeAsync(false);
    }

    private void ClearForm()
    {
        email = "";
        selectedRole = null;
        errorMessage = null;
        successMessage = null;
        isSaving = false;
    }

    private async Task searchUsers()
    {
        var response = await Http.GetFromJsonAsync<List<ResponseUserDto>>($"api/User/search?email={email}&amount=3");
        users = response;
    }
    
    private async Task AddEmploye()
    {
        if (!selectedRole.HasValue)
        {
            errorMessage = "Please Select employee role";
            return;
        }

        isSaving = true;
        errorMessage = null;
        successMessage = null;

        try
        
        {
            var createEmployeeDto = new CreateEmployeeDto()
            {
                UserId = selectedUser.Id,
                RestaurantId = RestaurantId,
                RoleEnumDto = selectedRole.Value
            };
            
            var response = await Http.PostAsJsonAsync("api/Employees", createEmployeeDto);
            
            
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<CreateUserResponse>();
                successMessage = $"Employee {selectedUser.FirstName} {selectedUser.LastName} added successfully.";
                
                if (OnEmployeeAdded.HasDelegate)
                {
                    await OnEmployeeAdded.InvokeAsync(result); 
                }
                
                ClearForm();
                
                await Task.Delay(2000);
                await Close();
            }
            else
            {
                var errorResponse = await response.Content.ReadAsStringAsync();
                errorMessage = $"Error adding employee {errorResponse}";
            }
        }
        catch (Exception ex)
        {
            // errorMessage = $"Wystąpił błąd: {ex.Message}";
            // Console.WriteLine($"Error saving employee: {ex}");
        }
        finally
        {
            isSaving = false;
        }
    }

}