@inject HttpClient Http

<div class="container-fluid py-4">
    @if (Restaurant != null)
    {

        <div class="row g-3 mb-4">
            <div class="col-12 col-sm-8 col-md-6 col-lg-4 mx-auto">
                <div class="card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center bg-light">
                        <span class="fw-semibold">Profile Photo</span>
                        <div class="d-flex gap-1">
                            <div>
                                <label for="profilePhotoInput" class="base-button"
                                       style="cursor: pointer; width: 32px; height: 32px; padding: 0;">
                                    @if (_isUploadingProfile)
                                    {
                                        <span class="spinner-border spinner-border-sm" role="status"></span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-upload"></i>
                                    }
                                </label>

                                <InputFile OnChange="@OnProfilePhotoSelected"
                                           accept="image/*"
                                           id="profilePhotoInput"
                                           style="display: none;"/>
                            </div>

                            @if (!string.IsNullOrEmpty(Restaurant?.ProfileThumbnailUrl))
                            {
                                <button class="base-button d-flex align-items-center justify-content-center"
                                        @onclick="DeleteProfilePhoto"
                                        disabled="@_isDeletingProfile"
                                        title="Delete photo"
                                        style="width: 32px; height: 32px; padding: 0;">
                                    X
                                </button>
                            }
                        </div>

                    </div>
                    <div class="card-body p-0">

                        @if (!string.IsNullOrEmpty(Restaurant!.ProfileThumbnailUrl))
                        {
                            <img src="@Restaurant.ProfileThumbnailUrl"
                                 alt="@Restaurant.Name"
                                 class="img-fluid w-100"
                                 style="max-height: 300px; object-fit: cover;"/>
                        }
                        else
                        {
                            <div
                                class="rounded shadow-sm d-flex align-items-center justify-content-center bg-white text-primary"
                                style="width: 300px; height: 300px; margin: auto;">
                                <i class="bi bi-shop fs-1"></i>
                                @*TODO add placeholder images*@
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        @if (Restaurant.GalleryImages != null && Restaurant.GalleryImages.Any())
        {
            <div class="row g-3 mb-4">
                @foreach (var imageLink in Restaurant.GalleryImages)
                {
                    var photoUrl = imageLink.ThumbnailUrl;
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="card h-100 ">
                            <div class="card-header d-flex justify-content-between align-items-center bg-light">
                                <span class="fw-semibold">Photo</span>
                                <button
                                    class="base-button  m-1 d-flex align-items-center justify-content-center"
                                    @onclick="() => DeleteRestaurantPhoto(imageLink.Id)"
                                    disabled="@_isDeletingPhotos"
                                    style="width: 32px; height: 32px; padding: 0;">X
                                </button>
                            </div>
                            <div class="card-body p-0">
                                <img src="@photoUrl"
                                     alt="@imageLink.OriginalFileName"
                                     class="img-fluid w-100"
                                     style="height: 200px; object-fit: cover;"/>
                            </div>
                        </div>
                    </div>
                }
                
            </div>
        }
        else
        {
            <div class="alert alert-info text-center mb-3" role="alert">
                <i class="bi bi-image me-2"></i>No restaurant photos uploaded
            </div>
        }

        <div>
            <label class="form-label fw-semibold">Upload Restaurant Photos</label>
            <InputFile OnChange="@OnRestaurantPhotosSelected"
                       accept="image/*"
                       multiple
                       class="form-control"/>
            @if (_isUploadingPhotos)
            {
                <div class="mt-2">
                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    <span class="text-muted">Uploading...</span>
                </div>
            }
            <small class="form-text text-muted">You can select multiple photos at once</small>
        </div>      
    }
    else
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading restaurant data...</p>
        </div>
    }
</div>