@page "/login"
@using RestaurantApp.Blazor.Components
@using RestaurantApp.Shared.DTOs
@using RestaurantApp.Shared.DTOs.Auth
@using Services
@inject AuthService AuthService
@inject NavigationManager Navigation

<div class="login-page">
    <div class="login-container">
        <div class="login-card">
            <h2 class="login-title">Log in</h2>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @_errorMessage
                </div>
            }

            <EditForm Model="@_loginRequest" OnValidSubmit="@HandleLogin">
                <div class="form-group">
                    <label for="email">e-mail</label>
                    <InputText id="email" @bind-Value="_loginRequest.Email"
                               class="form-control" placeholder="email@example.com" />
                </div>

                <div class="form-group">
                    <label for="password">password</label>
                    <InputText id="password" @bind-Value="_loginRequest.Password"
                               type="password" class="form-control" />
                </div>

                <div class="register-link">
                    <a href="/forgot-password">Forgot your password?</a>
                </div>

                <div class="register-link">
                    <span>Don't have an account?</span><br />
                    <a href="/register">Register now!</a>
                </div>

                <button type="submit" class="login-btn" disabled="@_isLoading">
                    @if (_isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </span>
                        <span>Logging in...</span>
                    }
                    else
                    {
                        <span>Log in</span>
                    }
                </button>
            </EditForm>
        </div>
    </div>
</div>

<TwoFactorModal IsVisible="@_showTwoFactorModal"
                IsLoading="@_isVerifying2FA"
                ErrorMessage="@_twoFactorError"
                OnSubmit="@HandleTwoFactorSubmit"
                OnCancel="@HandleTwoFactorCancel"
                @ref="_twoFactorModalRef"/>

@code {
    [Parameter]
    [SupplyParameterFromQuery]
    public string? returnUrl { get; set; }
    
    private LoginRequest _loginRequest = new();
    private bool _isLoading = false;
    private string _errorMessage = string.Empty;
    

    private bool _showTwoFactorModal = false;
    private bool _isVerifying2FA = false;
    private string? _twoFactorError;
    private TwoFactorModal? _twoFactorModalRef;

    private async Task HandleLogin()
    {
        _isLoading = true;
        _errorMessage = string.Empty;
        StateHasChanged();

        try
        {
            var (success, requiresTwoFactor, errorMessage) = 
                await AuthService.LoginAsync(_loginRequest.Email, _loginRequest.Password);

            if (requiresTwoFactor)
            {
                _showTwoFactorModal = true;
                _twoFactorError = null;
            }
            else if (success)
            {
                Navigation.NavigateTo(string.IsNullOrEmpty(returnUrl) ? "/" : returnUrl);
            }
            else
            {
                _errorMessage = errorMessage ?? "Incorrect email or password. Please try again.";
            }
        }
        catch (HttpRequestException)
        {
            _errorMessage = "Cannot connect to the server. Please check your internet connection.";
        }
        catch (Exception ex)
        {
            _errorMessage = "Error occurred during login. Please try again.";
            Console.WriteLine($"Login error: {ex.Message}");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleTwoFactorSubmit(string twoFactorCode)
    {
        _isVerifying2FA = true;
        _twoFactorError = null;
        StateHasChanged();

        try
        {
            var (success, requiresTwoFactor, errorMessage) = 
                await AuthService.LoginAsync(_loginRequest.Email, _loginRequest.Password, twoFactorCode);

            if (success)
            {
                _showTwoFactorModal = false;
                Navigation.NavigateTo(string.IsNullOrEmpty(returnUrl) ? "/" : returnUrl);
            }
            else
            {
                _twoFactorError = errorMessage ?? "Invalid 2FA code. Please try again.";
                _twoFactorModalRef?.ClearCode();
            }
        }
        catch (Exception ex)
        {
            _twoFactorError = "Error during authorization try again";
            Console.WriteLine($"2FA verification error: {ex.Message}");
        }
        finally
        {
            _isVerifying2FA = false;
            StateHasChanged();
        }
    }

    private void HandleTwoFactorCancel()
    {
        _showTwoFactorModal = false;
        _twoFactorError = null;
        _isLoading = false;
        StateHasChanged();
    }
}