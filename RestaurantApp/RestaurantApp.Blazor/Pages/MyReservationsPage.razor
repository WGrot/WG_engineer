@page "/my-reservations"
@using RestaurantApp.Shared.Models
@using Microsoft.AspNetCore.Authorization
@using RestaurantApp.Blazor.Helpers
@using RestaurantApp.Shared.DTOs.SearchParameters
@using RestaurantApp.Blazor.Components
@using RestaurantApp.Blazor.Services
@using RestaurantApp.Shared.Common
@using RestaurantApp.Shared.DTOs.Reservation
@attribute [Authorize]
@inject HttpClient Http
@inject MessageService MessageService

<div class="container-fluid px-4">
    <div class="row mb-4">

            <div class="col-12 my-3 card bg-primary">
                <div class="card-body  text-white" >
                    <h2 class="text-center mb-0">
                        <i class="bi bi-calendar-check me-1"></i>Your Reservations
                    </h2>
                    <h5 class="text-white text-center">View all your reservations</h5>
                </div>
            </div>

    </div>

    @if (IsInitialLoading)
    {
        <div class="d-flex justify-content-center align-items-center" style="min-height: 300px;">
            <div class="text-center">
                <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="text-muted">Loading your reservations...</p>
            </div>
        </div>
    }
    else if (_reservations == null)
    {
        <div class="alert alert-info d-flex align-items-center" role="alert">
            <i class="bi bi-info-circle-fill me-2"></i>
            <div>You don't have any reservations yet.</div>
        </div>
    }
    else
    {

        <div class="row">
            <div class="col-lg-3 col-md-4">
                <ReservationFilters SearchParameters="@_searchParameters"
                                    OnApplyFilters="@LoadInitialReservations"
                                    OnClearFilters="@ClearParams"
                                    ShowCustomerFilters="false">

                </ReservationFilters>
            </div>
            
            <div class="col-lg-9 col-md-9">
                <div class="d-flex flex-row justify-content-end mb-2">
                    <SetPageSizeComponent
                        OnPageSizeChanged="@SetPageSize"
                        Title="Reservations per page: "/>
                    <SortDropdown
                        Options="_sortOptions"
                        SelectedValue="@_searchParameters.SortBy"
                        OnSortChanged="@SortReservations"/>
                </div>
                @if (IsInitialLoading)
                {
                    <div class="d-flex justify-content-center align-items-center" style="min-height: 400px;">
                        <div class="text-center">
                            <div class="spinner-border text-primary mb-3" role="status"
                                 style="width: 3rem; height: 3rem;">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="text-muted">Loading reservations...</p>
                        </div>
                    </div>
                }
                else
                {
                    foreach (var reservation in _reservations)
                    {
                        <MyReservationCard
                            Reservation="reservation"
                            OnCancelled="() => {_showCancellationModal = true; _reservationToCancel = reservation; }"/>
                    }

                    @if (_hasMoreReservations && _reservations.Any())
                    {
                        <div class="text-center mt-3">
                            <button class="btn-outline-primary"
                                    @onclick="LoadMoreReservations"
                                    disabled="@_isLoadingMore">
                                @if (_isLoadingMore)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    <span>Loading...</span>
                                }
                                else
                                {
                                    <i class="bi bi-arrow-down-circle me-2"></i>
                                    <span>Load more reservations</span>
                                }
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="text-center mt-3 text-muted">
                            <i class="bi bi-check-circle me-2"></i>
                            All reservations loaded
                        </div>
                    }

                    @if (!_reservations.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-search text-muted" style="font-size: 4rem;"></i>
                            <p class="text-muted mt-3">No reservations found matching your filters.</p>
                            <button class="btn btn-outline-primary btn-sm" @onclick="() => ClearParams()">
                                Clear Filters
                            </button>
                        </div>
                    }
                }
            </div>

        </div>

    }
    <ConfirmationModal
        Title="Confirm Cancellation"
        Message="Are you sure you want to cancel this reservation? This cannot be undone"
        @bind-IsVisible="_showCancellationModal"
        OnConfirm="CancelReservation"
        CancelButtonText="Abort"
        ConfirmButtonText="Confirm Cancellation">
        
    </ConfirmationModal>
</div>

    @code {
    private List<ReservationDto>? _reservations;
    private ReservationSearchParameters _searchParameters = new ReservationSearchParameters
    {
        Page = 1,
        PageSize = 10,
        SortBy = "newest"
    };
    private bool IsInitialLoading { get; set; } = true;
    bool _hasMoreReservations = true;
    private bool _isLoadingMore;
    private ReservationDto? _reservationToCancel;
    private bool _showCancellationModal;

    protected override async Task OnInitializedAsync()
    {
        await LoadInitialReservations();
    }
    
    private async Task ClearParams()
    {
        _searchParameters = new ReservationSearchParameters
        {
            PageSize = 10
        };
        await LoadInitialReservations();
    }
    
    private async Task SortReservations(string option)
    {
        if (_searchParameters.SortBy == option) return;

        _searchParameters.SortBy = option.ToLower();
        await LoadInitialReservations();
    }
    
    private async Task LoadInitialReservations()
    {
        IsInitialLoading = true;
        _reservations = new List<ReservationDto>();
        _searchParameters.Page = 1;

        try
        {
            await LoadReservationsPage();
        }
        catch (Exception)
        {
            _reservations = new List<ReservationDto>();
            MessageService.AddError("Error", "Failed to load reservations.");
        }
        finally
        {
            IsInitialLoading = false;
        }
    }
    
    
    
    private async Task LoadReservationsPage()
    {
        try
        {
            var queryString = _searchParameters.BuildQueryString();

            var response =
                await Http.GetFromJsonAsync<PaginatedReservationsDto>($"api/reservation/client/{queryString}");
            if (response != null)
            {
                _reservations.AddRange(response.Reservations);
                _hasMoreReservations = response.HasMore;
            }
        }
        catch (Exception )
        {
            MessageService.AddError("Error", "Failed to load reservations.");
            _reservations = new List<ReservationDto>();
        }
        finally
        {
            _isLoadingMore = false;
        }
    }
    
    private async Task CancelReservation()
    {
        if (_reservationToCancel == null) return;

        try
        {
            var request = new HttpRequestMessage(HttpMethod.Patch,
                $"/api/Reservation/manage/{_reservationToCancel.Id}/cancel-user-reservation");

            var response = await Http.SendAsync(request);

            if (response.IsSuccessStatusCode)
            {
                _reservationToCancel.Status = ReservationStatusEnumDto.Cancelled;
                MessageService.AddSuccess("Success", "Reservation cancelled successfully.");
            }
            else
            {
                var errorMsg = await response.Content.ReadAsStringAsync();
            }
        }
        catch (Exception )
        {
            MessageService.AddError("Error", "Failed to cancel reservation.");
        }
        finally
        {
            _reservationToCancel = null;
            _showCancellationModal = false;
        }
    }
    
    private async Task LoadMoreReservations()
    {
        if (_isLoadingMore || !_hasMoreReservations) return;

        _isLoadingMore = true;
        _searchParameters.Page++;

        try
        {
            await LoadReservationsPage();
        }
        catch (Exception )
        {
            _searchParameters.Page--;
        }
        finally
        {
            _isLoadingMore = false;
        }
    }
    
    private async Task SetPageSize(int size)
    {
        _searchParameters.PageSize = size;
        _searchParameters.Page = 1;
        await LoadInitialReservations();
    }
    
    private List<SortOption> _sortOptions = new()
    {
        new() { Label = "Newest", Value = "newest" },
        new() { Label = "Oldest", Value = "oldest" },
        new() { Label = "Next", Value = "next" },
    };

}
