@page "/reset-password"
@using System.Text.Json
@using RestaurantApp.Shared.DTOs.Auth
@inject HttpClient Http
@inject NavigationManager Navigation

<div class="verification-page">
    <div class="verification-container">
        <div class="verification-card">
            <div class="icon-container">
                <i class="bi bi-shield-lock-fill verification-icon"></i>
            </div>
            
            <h2 class="verification-title">Reset Your Password</h2>
            
            @if (!_passwordReset)
            {
                <p class="verification-message">
                    Enter your new password below to reset your account password.
                </p>
                
                @if (!string.IsNullOrEmpty(_errorMessage))
                {
                    <div class="alert alert-danger">
                        @_errorMessage
                    </div>
                }
                
                <EditForm Model="@_resetPasswordRequest" OnValidSubmit="HandleResetPassword">
                    <DataAnnotationsValidator />
                    
                    <div class="form-group">
                        <div class="input-wrapper">
                            <i class="bi bi-lock-fill input-icon"></i>
                            <InputText @bind-Value="_resetPasswordRequest.NewPassword" 
                                       class="form-input" 
                                       placeholder="New password" 
                                       type="password"
                                       disabled="@_isLoading" />
                        </div>
                        <ValidationMessage For="@(() => _resetPasswordRequest.NewPassword)" class="validation-message" />
                    </div>
                    
                    <div class="form-group">
                        <div class="input-wrapper">
                            <i class="bi bi-lock-fill input-icon"></i>
                            <InputText @bind-Value="_resetPasswordRequest.ConfirmPassword" 
                                       class="form-input" 
                                       placeholder="Confirm password" 
                                       type="password"
                                       disabled="@_isLoading" />
                        </div>
                        <ValidationMessage For="@(() => _resetPasswordRequest.ConfirmPassword)" class="validation-message" />
                    </div>
                    
                    <div class="info-box">
                        <p class="info-text">Password Requirements:</p>
                        <p class="info-subtext">
                            • At least 6 characters<br/>
                            • Mix of letters and numbers recommended
                        </p>
                    </div>
                    
                    <button type="submit" class="resend-btn" disabled="@_isLoading">
                        @if (_isLoading)
                        {
                            <span>Resetting...</span>
                        }
                        else
                        {
                            <span>Reset Password</span>
                        }
                    </button>
                </EditForm>
            }
            else
            {
                <div class="success-container">
                    <div class="success-icon-container">
                        <i class="bi bi-check-circle-fill success-icon"></i>
                    </div>
                    
                    <p class="verification-message">
                        Your password has been successfully reset!
                    </p>
                    
                    <button @onclick="GoToLogin" class="resend-btn">
                        <span>Go to Login</span>
                    </button>
                </div>
            }
            
            @if (!_passwordReset)
            {
                <div class="login-link">
                    <span>Remember your password?</span><br />
                    <a href="/login">Back to Login</a>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    [SupplyParameterFromQuery(Name = "userId")]
    public string? UserId { get; set; }
    
    [Parameter]
    [SupplyParameterFromQuery(Name = "token")]
    public string? Token { get; set; }
    
    private ResetPasswordRequest _resetPasswordRequest = new();
    private bool _isLoading = false;
    private bool _passwordReset = false;
    private string _errorMessage = string.Empty;
    
    protected override void OnInitialized()
    {
        if (string.IsNullOrEmpty(UserId) || string.IsNullOrEmpty(Token))
        {
            _errorMessage = "Invalid reset link. Please request a new password reset.";
            return;
        }
        
        _resetPasswordRequest.UserId = UserId;
        _resetPasswordRequest.Token = Token;
    }
    
    private async Task HandleResetPassword()
    {
        _isLoading = true;
        _errorMessage = string.Empty;
        
        try
        {
            var response = await Http.PostAsJsonAsync("/api/Auth/reset-password", _resetPasswordRequest);
            
            if (response.IsSuccessStatusCode)
            {
                _passwordReset = true;
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                
                try
                {
                    var errorResponse = JsonSerializer.Deserialize<Dictionary<string, object>>(errorContent);
                    if (errorResponse != null && errorResponse.ContainsKey("error"))
                    {
                        _errorMessage = errorResponse["error"].ToString() ?? "Failed to reset password.";
                    }
                    else
                    {
                        _errorMessage = "Failed to reset password. The link may have expired.";
                    }
                }
                catch
                {
                    _errorMessage = "An error occurred. Please request a new password reset.";
                }
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"An error occurred: {ex.Message}";
            Console.WriteLine($"Reset password error: {ex}");
        }
        finally
        {
            _isLoading = false;
            StateHasChanged();
        }
    }
    
    private void GoToLogin()
    {
        Navigation.NavigateTo("/login");
    }
}